{% extends "_layout.njk" %}

{% set primaryNavId = 'overview' %}

{% set title = 'Overview' %}

{% block content %}






  <h1 class="govuk-heading-l">
    {{title}}
  </h1>

  {% set promptHtml %}

    <h2 class="govuk-heading-m">
      Important
    </h2>

    <ul class="govuk-list govuk-list--bullet">
      <li>
        <a href="/applications/?referrer=overview&importantItem=5 days or fewer to make decision">{{aboutToBeAutomaticallyRejectedCount}} applications have 5 days or fewer to make a decision</a>
      </li>
      <li>
        <a href="/applications/?referrer=overview&importantItem=Feedback needed">{{needsFeedbackCount}} applications need feedback after being automatically rejected</a>
      </li>
    </ul>

  {% endset %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{govukInsetText({
        html: promptHtml,
        classes: 'govuk-!-margin-top-0'
      })}}
    </div>
  </div>

{% for organisation in data.user.organisations %}
    <h3 class="govuk-heading-m">
      {{organisation.name}}
    </h3>
    <div class="app-home-statuses govuk-!-margin-bottom-4">
      {% for relationship in data.user.relationships %}
