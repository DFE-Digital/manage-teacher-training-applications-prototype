{% extends "_layout.njk" %}

{% set primaryNavId = 'account' %}
{% set subNavId = 'account' %}

{% set title = "Your account" %}

{% block content %}

    <h1 class="govuk-heading-l">
      Your account
    </h1>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-half">

      <h2 class="govuk-heading-m">
        <a href="/account/profile">Profile</a>
      </h2>

      <p>Use this section to:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>change your name</li>
        <li>change your email address</li>
        <li>change your password</li>
        <li>check your permissions</li>
      </ul>

      <h2 class="govuk-heading-m">
        <a href="/account/notifications">Email notifications</a>
      </h2>

      <p>Use this section to choose which notifications you receive.</p>
    </div>
    <div class="govuk-grid-column-one-half">

      <h2 class="govuk-heading-m">
        <a href="/account/users">Users</a>
      </h2>

      <p>Use this section to:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>manage users and their permissions</li>
        <li>invite users</li>
      </ul>

      <h2 class="govuk-heading-m">
        <a href="/account/organisational-permissions">Organisational permissions</a>
      </h2>

      <p>Use this section to:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>set permissions between your organisation and partner organisations</li>
        <li>check permissions between organisations</li>
      </ul>

    </div>
  </div>
{% endblock %}
