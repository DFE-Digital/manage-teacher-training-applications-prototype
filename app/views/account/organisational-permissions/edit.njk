{% extends "_layout.njk" %}

{% set org = data.user.organisations[0].name %}
{% set partner = data.accreditedBodies[0].name %}

{% set title = 'Change permissions - ' + org + ' and ' + partner %}

{% block beforeContent %}
  {{ govukBackLink({
    href: "/account/organisational-permissions/" + organisationId
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">Change permissions</span>
      <h1 class="govuk-heading-l">{{org}} and {{ partner }}</h1>

      {% include "_includes/permissions-guidance.njk" %}

      <form novalidate method="post">
        {% include "_includes/permissions-checkboxes.njk" %}
        {{govukButton({
          text: "Save permissions"
        })}}
      </form>
    </div>
  </div>

{% endblock %}
