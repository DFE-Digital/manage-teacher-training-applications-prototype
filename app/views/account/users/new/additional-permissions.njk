{% extends "_content-wide.njk" %}

{% set primaryNavId = 'users' %}

{% set title = 'Additional permissions - Invite user' %}

{% block beforeContent %}
  {{ govukBackLink({
    href: "/account/users/new/permissions/"+org.org.id
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set runOrRatified %}
        {% if org.org.isAccreditedBody %}
          run
        {% else %}
          ratified
        {% endif %}
      {% endset %}

      {% set makeDecisionsHint %}
        {{appPermissions({
          runOrRatified: runOrRatified,
          permissionDescription: "make decisions",
          applicableOrgs: org.permissions.applicableOrgs.makeDecisions,
          nonApplicableOrgs: org.permissions.nonApplicableOrgs.makeDecisions
        })}}
      {% endset %}

      {% set safeguardingHint %}
        {{appPermissions({
          runOrRatified: runOrRatified,
          permissionDescription: "view criminal convictions and professional misconduct",
          applicableOrgs: org.permissions.applicableOrgs.viewSafeguardingInformation,
          nonApplicableOrgs: org.permissions.nonApplicableOrgs.viewSafeguardingInformation
        })}}
      {% endset %}

      {% set diversityHint %}
        {{appPermissions({
          runOrRatified: runOrRatified,
          permissionDescription: "view equality and diversity information",
          applicableOrgs: org.permissions.applicableOrgs.viewDiversityInformation,
          nonApplicableOrgs: org.permissions.nonApplicableOrgs.viewDiversityInformation
        })}}
      {% endset %}

      {% set h1 %}
        <span class="govuk-caption-l">Invite user</span>
        Additional user permissions for {{org.org.name}}
      {% endset %}

      <form novalidate method="post">

          {{ govukCheckboxes({
            fieldset: {
              legend: {
                html: h1,
                isPageHeading: true,
                classes: "govuk-fieldset__legend--l"
              }
            },
            items: [
              {
                value: "manageOrganisations",
                text: "Manage organisational permissions",
                label: {
                  classes: "govuk-label--"
                }
              },
              {
                value: "manageUsers",
                text: "Manage users",
                label: {
                  classes: "govuk-label--"
                }
              },
              {
                value: "setupInterviews",
                html: "Set up interviews"
              },
              {
                value: "makeDecisions",
                html: "Make decisions",
                hint: {
                  html: makeDecisionsHint
                }
              },
              {
                value: "viewSafeguardingInformation",
                text: "View criminal convictions and professional misconduct",
                hint: {
                  html: safeguardingHint
                }
              },
              {
                value: "viewDiversityInformation",
                text: "View equality and diversity information",
                hint: {
                  html: diversityHint
                }
              }
            ]
          } | decorateAttributes(data, 'data.newuser.permissions.'+org.org.id)) }}


        {{govukButton({
          text: "Continue"
        })}}
      </form>
      <p class="govuk-body"><a href="/account/users">Cancel</a></p>
    </div>
  </div>

{% endblock %}
