{% extends "_layout.njk" %}

{% set title = 'Select organisations this user will have access to - Invite user' %}

{% set primaryNavId = 'users' %}
{% block beforeContent %}
  {{ govukBackLink({
    href: "/account/users/new"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set h1 %}
        <span class="govuk-caption-l">Invite user</span>
        Select organisations this user will have access to
      {% endset %}

      <form novalidate method="post">
        {{ govukCheckboxes({
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: organisationItems
        } | decorateAttributes(data, 'data.newuser.organisations') ) }}

        {{govukButton({
          text: "Continue"
        })}}
      </form>
      <p class="govuk-body"><a href="/account/users">Cancel</a></p>
    </div>
  </div>

{% endblock %}
