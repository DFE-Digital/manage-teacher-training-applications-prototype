{% extends "_layout.njk" %}

{% set primaryNavId = 'account' %}

{% set title = "Email notifications" %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Your account",
      href: "/account"
    }, {
      text: title
    }]
  }) }}
{% endblock %}

{% block content %}

  {{ govukNotificationBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flash+"</h2>",
    type: "success",
    icon: false
  }) if flash | falsify }}


  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post">

        {{ govukRadios({
          idPrefix: "emailsettings",
          name: "emailsettings",
          classes: "govuk-radios--inline",
          fieldset: {
            legend: {
              text: title,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            text: "These are sent when an application is submitted, withdrawn, automatically rejected, accepted or declined"
          },
          items: [
            {
              value: "On",
              text: "On",
              checked: checked(data.emailsettings, 'On')
            },
            {
              value: "Off",
              text: "Off",
              checked: checked(data.emailsettings, 'Off')
            }
          ]
        }) }}


        {{ govukButton({
          text: "Save settings"
        }) }}

      </form>
    </div>
  </div>

