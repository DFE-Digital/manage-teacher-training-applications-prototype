        {{ govukCheckboxes({
          idPrefix: "settings",
          name: "settings",
          fieldset: {
            legend: {
              text: title,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            text: "Includes when an application is received or withdrawn and when offers are accepted or declined"
          } if 11 == 1,
          items: [
            {
              value: "Receive email notifications about applications",
              text: "Receive email notifications about applications - blah and blah and blah",
              checked: true
            }
          ]
