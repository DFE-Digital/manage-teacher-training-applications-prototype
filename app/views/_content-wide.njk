{% extends "_layout.njk" %}

{% block content %}
  {% block beforePageTitle %}{% endblock %}

  {% if title %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
          {% if parent %}<span class="govuk-caption-xl">{{ parent }}</span>{% endif %}
          {{ title | safe }}
        </h1>
      </div>
    </div>
  {% endif %}
  {% block primary %}
  {% endblock %}
{% endblock %}
