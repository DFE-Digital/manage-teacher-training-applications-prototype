{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}

{% set title = "Applications (" + applications.length + ")" %}

{% block content %}

  <h1 class="govuk-heading-l govuk-!-margin-bottom-2">
    {{title}}
  </h1>

  <p class="govuk-body govuk-!-margin-bottom-6"><a class="govuk-link" href="/reports/export">Export data</a></p>

  <div class="app-filter-layout">
    <div class="app-filter-layout__filter">
      {% include "_includes/filter-panel.njk" %}
    </div>

    <div class="app-filter-layout__content">

      <div class="app-action-bar">
        <div class="app-action-bar__filter"></div>
      </div>

      {% include "_includes/search-panel.njk" %}

      <p>Ordered by least recently updated</p>

      {# {{ govukSelect({
        id: "sort",
        name: "sort",
        items: [
          {
            value: "Most recently updated",
            text: "Most recently updated"
          },
          {
            value: "Least recently updated",
            text: "Least recently updated"
          },
          {
            value: "Soonest to be automatically rejected",
            text: "Soonest to be automatically rejected"
          },
          {
            value: "Longest before automatically rejected",
            text: "Longest before automatically rejected"
          }
        ]
      }) }} #}

      <div>
        {%- if applications.length %}

          <div class="app-application-cards">
            {%- for a in applications %}


              {% include "_includes/application-card.njk" %}


            {% endfor -%}
          </div>

        {% endif -%}
      </div>

      {% if applications.length and pagination %}
        {% include "_includes/pagination.njk" %}
      {% endif %}

      {%- if not applications.length %}

        <p class="govuk-body">

          {%- if data.keywords -%}

            {%- if hasFilters -%}

              {%- if selectedFilters.categories.length > 1 or selectedFilters.categories[0].items.length > 1 -%}

                There are no results for ‘{{ data.keywords }}’ and the selected filters.

              {%- else -%}

                There are no results for ‘{{ data.keywords }}’ and the selected filter.

              {%- endif -%}

            {%- else -%}

              There are no results for ‘{{ data.keywords }}’.

            {%- endif -%}

          {%- else -%}

            {%- if hasFilters -%}

              {%- if selectedFilters.categories.length > 1 or selectedFilters.categories[0].items.length > 1 -%}

                There are no results for the selected filters.

              {%- else -%}

                There are no results for the selected filter.

              {%- endif -%}

            {%- else -%}

              There are no results

            {%- endif -%}

          {%- endif -%}

        </p>

      {% endif -%}
    </div>
  </div>

{% endblock %}

{% block pageScripts %}
  <script src="/public/javascripts/components/filter-toggle-button/filter-toggle-button.js"></script>
  <script>
    new AppFrontend.FilterToggleButton({
      bigModeMediaQuery: '(min-width: 48.063em)',
      startHidden: false,
      toggleButton: {
        container: $('.app-action-bar__filter'),
        showText: 'Show filter',
        hideText: 'Hide filter',
        classes: 'govuk-button--secondary govuk-!-margin-bottom-3'
      },
      closeButton: {
        container: $('.app-filter__header-action'),
        text: 'Close'
      },
      filter: {
        container: $('.app-filter-layout__filter')
      }
    })
  </script>

  {% if userItems.length >= userItemsDisplayLimit %}
    <script type="text/javascript" src="/public/javascripts/components/checkbox-filter/checkbox-filter.js"></script>
    <script type="text/javascript">
      new AppFrontend.CheckboxFilter({
        container: $('#assignedUser'),
        textBox: {
          label: 'Search for user'
        }
      })
    </script>
  {% endif %}

  {% if subjectItems.length >= subjectItemsDisplayLimit %}
    <script type="text/javascript" src="/public/javascripts/components/checkbox-filter/checkbox-filter.js"></script>
    <script type="text/javascript">
      new AppFrontend.CheckboxFilter({
        container: $('#subject'),
        textBox: {
          label: 'Search for subject'
        }
      })
    </script>
  {% endif %}

{% endblock %}
