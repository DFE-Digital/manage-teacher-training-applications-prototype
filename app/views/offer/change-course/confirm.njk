{% extends "_layout.njk" %}

{% set application = data.applications[applicationId] %}
{% set name = [application["personal-details"]["given-name"], application["personal-details"]["family-name"]] | join(" ") %}

{% set title = "Check and confirm changes to offer" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + application.id + '/offer/change-course/location'
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">{{title}}</h1>

      <h2 class="govuk-heading-l">Original offer</h2>

      {% include "_includes/offer-summary.njk" %}

      <h2 class="govuk-heading-l">New offer</h2>

      {{ govukSummaryList({
        rows: [{
          key: {
            text: "Candidate name"
          },
          value: {
            text: name
          }
        }, {
          key: {
            text: "Provider"
          },
          value: {
            html: application.provider
          }
        }, {
          key: {
            text: "Course"
          },
          value: {
            html: data.course
          }
        }, {
          key: {
            text: "Location"
          },
          value: {
            html: data.location
          }
        }
      ]}) }}

      <form method="post">
        {{ govukButton({
          text: "Change offer"
        }) }}
      </form>
      <p class="govuk-body"><a href="/application/{{ application.id }}">Cancel</a></p>
    </div>
  </div>

{% endblock %}
