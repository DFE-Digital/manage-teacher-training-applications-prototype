{% extends "_layout.njk" %}

{% set name = [application["personal-details"]["given-name"], application["personal-details"]["family-name"]] | join(" ") %}

{% set title = "Confirm condition has been met" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + application.id + '/condition/' + condition.id + '/change-status'
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">{{title}}</h1>

      {{ govukSummaryList({
        rows: [{
          key: {
            text: "Candidate"
          },
          value: {
            text: name
          }
        }, {
          key: {
            text: "Condition"
          },
          value: {
            text: condition.description
          }
        } ]
      }) }}
      {% if hasOnlyOneConditionNotMet %}
        <p>You will not be able to change the status of the conditions after marking this condition as met.</p>
      {% endif %}

      <form method="post">
        {{ govukButton({
          text: "Confirm condition as met"
        }) }}
      </form>
      <p class="govuk-body"><a href="/application/{{ application.id }}">Cancel</a></p>
    </div>
  </div>

{% endblock %}
