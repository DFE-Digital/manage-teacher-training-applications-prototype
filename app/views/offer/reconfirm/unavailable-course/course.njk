{% extends "_layout.njk" %}

{% set name = [application.personalDetails.givenName, application.personalDetails.familyName] | join(" ") %}
{% set title = "Select new course" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + application.id + "/offer/reconfirm/unavailable-course"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-xl">{{name}}</span>
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-4">
        {{title}}
      </h1>

      <form method="post">

      <div class="app-offer-pane govuk-!-margin-bottom-4">
        {% include "_includes/offer/reconfirm/details-of-deferred-offer.njk" %}
      </div>

        {{ govukRadios({
          fieldset: {
            legend: {
              text: title,
              classes: "govuk-visually-hidden"
            }
          },
          idPrefix: "course",
          name: "course",
          items: [{
            value: "Primary (X100)",
            text: "Primary (X100)",
            hint: {
              text: 'PGCE with QTS full time'
            },
            checked: checked("course", "Primary (X100)")
          }, {
            value: "Primary (X121)",
            text: "Primary (X121)",
            hint: {
              text: 'QTS full time'
            },
            checked: checked("course", "Primary (X121)")
          }]
        }) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
      <p class="govuk-body"><a href="/application/{{ application.id }}">Cancel</a></p>
    </div>
  </div>
{% endblock %}
