{% extends "_layout.njk" %}

{% set heading = "Sign in" %}
{% set title = heading %}

{% block header %}
  {% include "_includes/header.njk" %}
{% endblock %}

{% block content %}

  {{ govukNotificationBanner({
    text: 'You need to use your email address to sign in because DfE Sign-in is currently not working.',
    text: 'DfE Sign-in is currently unavailable - use your email address to sign in.'
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">
        {{heading}}
      </h1>

      <p class="govuk-body-l">Sign in to manage teacher training applications.</p>

      <form action="/start/check-email">

      {{ govukInput({
        id: "email",
        name: "email",
        label: {
          text: "Email address",
          classes: "govuk-label--m"
        },
        type: "email",
        autocomplete: "email",
        spellcheck: false
      }) }}

      {{ govukButton({
        text: "Request link"
      }) }}

      </form>

      <h2 class="govuk-heading-m govuk-!-margin-top-6">
        Get an account
      </h2>

      <p>Ask a colleague within your organisation to add you if you do not have an account. Theyâ€™ll need to have permission to manage users.</p>

      <p>If your organisation has not been set up to manage teacher training applications, send an email to <a href="#">becomingateacher@digital.education.gov.uk</a>.</p>

    </div>
  </div>

{% endblock %}
