<div class="app-list__item">
  <div class="app-list__item-noflex">
    {{ govukTag({
      classes: a.status | statusClass,
      text: a.status
    })}}
    <span class="govuk-caption-m govuk-!-font-size-16">Last updated {{ updated | date("d LLL yyyy") }}</span>
  </div>
  <div class="app-list__flex">
    <div class="app-list__item-cell">
      <p><a href="/application/{{ a.id }}">{{ [a["personal-details"]["given-name"], a["personal-details"]["family-name"]] | join(" ") }}</a></p>
    </div>
    <div class="app-list__item-cell">
      <span class="govuk-caption-m govuk-!-font-size-16">{{ a.provider }}</span> <p>{{ a.course }}</p>
    </div>
  </div>
  {% if a.note %}
    <div class="app-list__flex app-list__flex--note">
      {# <div class="app-list__item-cell">
        <span class="govuk-caption-m govuk-!-font-size-16">Last updated</span>
      </div> #}
      <div class="app-list__item-cell">
        <span class="govuk-caption-m govuk-!-font-size-16">Note</span>
        <p>Follow up with candidate</p>
      </div>
    </div>
  {% endif %}
</div>
