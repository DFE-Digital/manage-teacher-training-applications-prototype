      },
      value: {
        html: application.course
      }
      }, {
      key: {
        text: "Location"
      },
      value: {
        html: "Alliance Academy, Edgeware, Road Name, SW1 1AA"
      }
      }, {
      key: {
        text: "Full time or part time"
      },
      value: {
        html: "Full time"
      }
    }
    ]})
  }}

{% endset %}

{{ govukDetails({
  summaryText: "Details of offer",
  html: courseDetails,
  classes: "app-details--no-boder"
}) }}
