{% extends "_layout.njk" %}
{% set cancel = cancelLinkDestination or ('/application/' + application.id + "/offer" ) %}
{% set name = application.personalDetails.name %}

{% set title = "Confirm condition met" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: backLinkDestination
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-xl">{{name}}</span>
      <h1 class="govuk-heading-xl">{{title}}</h1>

      <div class="app-offer-panel govuk-!-margin-bottom-6">
        <p class="govuk-!-margin-bottom-0">Condition: {{condition.description}}</p>
      </div>

      {% if hasOnlyOneConditionNotMet %}
        {{ govukWarningText({
          text: "We’ll tell the candidate they’ve met all of the conditions and the application status will change to ‘Conditions met’.",
          iconFallbackText: "Warning"
        }) }}
      {% endif %}


      <form method="post">
        {{ govukButton({
          text: "Mark condition as met"
        }) }}
      </form>
      <p class="govuk-body"><a href="{{cancel}}">Cancel</a></p>
    </div>
  </div>

{% endblock %}
