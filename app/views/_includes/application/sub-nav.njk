<div class="govuk-tabs govuk-!-margin-bottom-6">
  <ul class="govuk-tabs__list">
    <li class="govuk-tabs__list-item {% if subNavId == "application" %} govuk-tabs__list-item--selected app-tabs__list-item--selected {% endif %}" role="presentation">
      <a class="govuk-tabs__tab app-tabs__tab" {% if subNavId == "application" %} aria-selected="true" {% endif %} href="/application/{{application.id}}"> Application </a>
    </li>
    {% if (application.status != 'Rejected')  and (application.status != 'Application withdrawn') and (application.status != 'Submitted')%}
      <li class="govuk-tabs__list-item app-tabs__list-item {% if subNavId == "offer" %} govuk-tabs__list-item--selected app-tabs__list-item--selected {% endif %}">
        <a class="govuk-tabs__tab app-tabs__tab" {% if subNavId == "application" %} aria-selected="true" {% endif %} href="/application/{{application.id}}/offer">
          Offer </a>
      </li>
    {% endif %}
    <li class="govuk-tabs__list-item app-tabs__list-item {% if subNavId == "notes" %} govuk-tabs__list-item--selected app-tabs__list-item--selected {% endif %}">
      <a class="govuk-tabs__tab app-tabs__tab" {% if subNavId == "application" %} aria-selected="true" {% endif %} href="/application/{{application.id}}/notes">
        Notes </a>
    </li>
    <li class="govuk-tabs__list-item app-tabs__list-item {% if subNavId == "timeline" %} govuk-tabs__list-item--selected app-tabs__list-item--selected {% endif %}">
      <a class="govuk-tabs__tab app-tabs__tab" {% if subNavId == "application" %} aria-selected="true" {% endif %} href="/application/{{application.id}}/timeline">
        Timeline </a>
    </li>
  </ul>
</div>
