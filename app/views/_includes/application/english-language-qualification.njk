{% set item = application.englishLanguageQualification %}
<h2 class="govuk-heading-m govuk-!-margin-bottom-2">English as a foreign language</h2>
{% if item.hasQualification == "Yes" %}
  <p class="govuk-body">{{ item.status }}.</p>
  <div class="govuk-grid govuk-!-margin-bottom-8">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        <div class="app-card">
          <h3 class="govuk-heading-s govuk-!-margin-bottom-1">{{ item.type }}</h3>
          <dl class="app-qualification">
            <dt class="app-qualification__key">Awarded</dt>
            <dd class="app-qualification__value app-qualification__value--caption">
              {{ item.year | date("y") }}
            </dd>
            <dt class="app-qualification__key">{{ item.gradeLabel }}</dt>
            <dd class="app-qualification__value">
              {{ item.grade }}
            </dd>
          {% if item.reference %}
            <dt class="app-qualification__key">{{ item.referenceLabel }}</dt>
            <dd class="app-qualification__value app-qualification__value--caption">
              {{ item.reference }}
            </dd>
          {% endif %}
          </dl>
        </div>
      </div>
    </div>
  </div>
{% else %}
  <p class="govuk-body govuk-!-margin-bottom-8">{{ item.status }}.</p>
{% endif %}
