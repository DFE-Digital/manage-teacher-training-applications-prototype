{% set vocationKeyHtml %}
  <h3 class="govuk-heading-s govuk-!-margin-bottom-0">Vocation</h3>
  <p class="govuk-hint" style="hanging-punctuation: first;">“Why do you want to be a teacher?”</p>
{% endset %}

{% set subjectKnowledgeKeyHtml %}
  <h3 class="govuk-heading-s govuk-!-margin-bottom-0">Subject knowledge</h3>
  <p class="govuk-hint" style="hanging-punctuation: first;">“Your knowledge about the subject you want to teach”</p>
{% endset %}

{% set miscellaneousKeyHtml %}
  <h3 class="govuk-heading-s govuk-!-margin-bottom-0">Additional information</h3>
  <p class="govuk-hint" style="hanging-punctuation: first;">“Is there anything else you would like to tell us about your application?”</p>
{% endset %}

{{ govukSummaryList({
  rows: [{
    key: {
      html: vocationKeyHtml
    },
    value: {
      html: application["personal-statement"].vocation | nl2br or "—"
    }
  }, {
    key: {
      html: subjectKnowledgeKeyHtml
    },
    value: {
      html: application["personal-statement"]["subject-knowledge"] | nl2br or "—"
    }
  }, {
    key: {
      text: "Interview preferences"
    },
    value: {
      html: application["personal-statement"].interview | nl2br or "—"
    }
  }, {
    key: {
      html: miscellaneousKeyHtml
    },
    value: {
      html: application["miscellaneous"] | nl2br or "—"
    }
  }]
}) }}
