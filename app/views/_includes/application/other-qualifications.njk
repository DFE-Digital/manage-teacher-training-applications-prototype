{% set rowData = [] %}
{% for item in application["other-qualifications"] | toArray %}
  {% set detailsHtml %}
    <p class="govuk-body-s">{{ item.org if item.provenance == "domestic" else [item.org, item.country] | join(", ") }}</p>
  {% endset %}
  {% set qualification %}
    {{ govukDetails({
      classes: "govuk-!-margin-0",
      summaryHtml: [item.type, item.subject] | join(" â€“ "),
      html: detailsHtml
    }) }}
  {% endset %}
  {% set rows = rowData.push([{
    html: qualification
  }, {
    html: item.year
  }, {
    html: item.grade
  }]) %}
{% endfor %}
{{ govukTable({
  head: [{
    classes: "govuk-!-width-one-half",
    text: "Other qualification"
  }, {
    classes: "govuk-!-width-one-quarter",
    text: "Awarded"
  }, {
    text: "Grade"
  }],
  rows: rowData
}) }}
