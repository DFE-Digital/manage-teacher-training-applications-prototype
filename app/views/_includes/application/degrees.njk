{% set degrees = application.degree | toArray %}
<h2 class="govuk-heading-m govuk-!-margin-bottom-2">{{ 'Degrees' if degrees.length > 1 else 'Degree' }}</h2>
<div class="govuk-grid govuk-!-margin-bottom-8">
  <div class="govuk-grid-row">
    {% for item in degrees %}
      {% set grade = item["grade-predicted"] + " (Predicted)" if item["grade-predicted"] else item.grade %}
      <div class="govuk-grid-column-one-third">
        <div class="app-card">
          <h3 class="govuk-heading-s govuk-!-margin-bottom-0">{{ item.type }} {{ item.subject }}</h3>
          {% if item.provenance == "international" %}
            <p class="govuk-body govuk-!-margin-bottom-0">{{ [item.org, item.country] | join(", ") }}</p>
          {% endif %}
          <p class="govuk-caption-m govuk-!-font-size-16">
            <span class="govuk-visually-hidden">Started: </span>{{ item['start-date'] }}
            <spam class="aria-hidden"> - </span>
            <span class="govuk-visually-hidden">Awarded: </span>{{ item['end-date'] }}
          </p>
          <p class="govuk-body-l govuk-!-font-weight-bold govuk-!-margin-bottom-0"><span class="govuk-visually-hidden">Grade: </span>{{ grade }}</p>
          {% if item.naric %}
            <p class="govuk-body govuk-!-margin-bottom-1">Comparable to a {{ item.naric.comparable }}</p>
            <p class="govuk-caption-m govuk-!-font-size-16 govuk-!-margin-bottom-0">NARIC reference: {{ item.naric.reference }} </p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
