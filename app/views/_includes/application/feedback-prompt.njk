{% if application.status == 'Rejected' and not application.rejectedReasons %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <p class="govuk-body">You need to tell the candidate why their application was rejected automatically.</p>
      {{ govukButton({
        text: "Give feedback",
        classes: "govuk-!-margin-bottom-9",
        href: "/application/" + application.id + "/feedback"
      }) }}
    </div>
  </div>
{% endif %}