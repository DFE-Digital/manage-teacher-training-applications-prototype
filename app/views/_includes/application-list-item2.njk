<div class="app-list-item2 app-list-item2--{{loop.index}}">
  <h3 class="govuk-heading-s govuk-!-margin-bottom-1">
    <a href="/application/{{ a.id }}">
      {{ [a["personal-details"]["given-name"], a["personal-details"]["family-name"]] | join(" ") }}</a>
  </h3>

  {{govukTag({
    classes: a.status | statusClass,
    text: a.status
  })}}

  {% set courseHtml %}
    <span class="govuk-caption-m govuk-!-font-size-16">{{ a.provider }}</span>
      <p>{{ a.course }}</p>
  {% endset %}

  {{ govukSummaryList({
    classes: 'app-list-item2__datalist',
    rows: [
      {
        key: {
          text: "Course"
        },
        value: {
          html: courseHtml
        }
      },
      {
        key: {
          text: "Last updated"
        },
        value: {
          html: updated | date("d LLL yyyy")
        }
      },
      {
        key: {
          text: "Note"
        },
        value: {
          html: "Follow up with candidate"
        }
      } if a.note
    ]
  }) }}
</div>
