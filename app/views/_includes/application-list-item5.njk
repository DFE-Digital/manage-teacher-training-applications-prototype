<div class="app-list-item5 app-list-item5--{{loop.index}}">
  <div class="app-list-item5__status">
    {{govukTag({
      classes: a.status | statusClass,
      text: a.status
    })}}
      {# <p class="govuk-!-margin-top-0 govuk-!-margin-bottom-2 govuk-caption-m govuk-!-font-size-16">Updated on {{updated | date("d LLL yyyy")}}</p> #}

      <div style="position: absolute; bottom: 5px; right: 0;">
    {% if a.notes %}
        <p class="app-list-item5__note govuk-!-margin-bottom-0 govuk-!-font-size-16">{{a.notes.items[0].subject}}</p>
    {% endif %}
        <p class="govuk-!-margin-top-0 govuk-!-margin-bottom-2 govuk-caption-m govuk-!-font-size-16">Updated on {{updated | date("d LLL yyyy")}}</p>
      </div>
  </div>
  <h3 class="govuk-heading-m govuk-!-margin-bottom-3">
    <a href="/application/{{ a.id }}" class="govuk-link govuk-link--no-visited-state">
      {{ [a["personal-details"]["given-name"], a["personal-details"]["family-name"]] | join(" ") }}
    </a>
  </h3>
  <div style="max-width:340px;">
    <span class="govuk-caption-m govuk-!-font-size-16" style="color: #0b0c0c;">{{ a.provider }}</span>
    <p class="govuk-!-margin-bottom-0 govuk-!-font-weight-bld">{{ a.course }}</p>
    <span class="govuk-caption-m govuk-!-font-size-16" style="color: #626a6e;">Accredited body: {{a.accreditingbody}}</span>
  </div>
</div>
