{% set workHistory = application.workHistory
  | toArray
  | sort(attribute="startDate")
%}
{% if workHistory.length >= 1 %}
  {% set rowData = [] %}
  {% for item in workHistory %}
    {% set org = item.org if item.category == "job" %}
    {% set startDate = item.startDate | date("LLLL yyyy") %}
    {% set endDate = item.endDate | date("LLLL yyyy") if item.endDate else "Present" %}

    <div class="app-experience__item">
      {% if item.category == "job" %}
        <h3 class="govuk-heading-s govuk-!-margin-bottom-0 govuk-!-margin-top-0">
          {{ item.role }}
          {% if item.type == "Part time" %}
            (part time)
          {% endif %}
        </h3>
      {% elseif item.category == "break" %}
        <h3 class="govuk-heading-s govuk-!-margin-bottom-0 govuk-!-margin-top-0">Break ({{item.duration}})</h3>
      {% endif %}
      <p class="govuk-body govuk-!-margin-bottom-0">{{org}}</p>
      <p class="govuk-body govuk-!-margin-bottom-0">{{[startDate, endDate] | join(" to ")}}</p>
      {% if item.category == "break" %}<p class="govuk-body govuk-!-margin-bottom-0 govuk-!-margin-top-1">{{ item.description }}</p>{% endif %}
      {%- if item.workedWithChildren == "Yes" %}
        <p class="govuk-body govuk-!-font-size-16 govuk-!-margin-bottom-0 govuk-!-margin-top-2">{{ appIcon({
          icon: "check",
          hidden: true
        }) }} This role used skills relevant to teaching</p>
      {%- endif %}
    </div>
  {% endfor %}
{% endif %}
