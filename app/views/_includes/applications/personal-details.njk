{% set nationalityText %}
  {% set nationalities = application.personalDetails.nationality %}
  {%- for nationality in nationalities -%}
    {{ (" and " if loop.last else ", ") if not loop.first }}{{ nationality }}
  {%- endfor -%}
{% endset %}

<h2 class="govuk-heading-m govuk-!-font-size-27 govuk-!-margin-top-7 govuk-!-margin-bottom-2 ">Personal details</h2>

{% set rightToWorkStudyHowHTML %}
<p class="govuk-body">{{ application.personalDetails.rightToWorkStudyHow }}</p>
<p class="govuk-body">{{ application.personalDetails.rightToWorkStudyHowDetails }}</p>
{% endset %}

<!-- text: application.personalDetails.rightToWorkStudyHow + ' - ' + application.personalDetails.rightToWorkStudyHowDetails -->

{% set immigrationStatusHTML %}
<p class="govuk-body">{{application.personalDetails.immigrationStatus}}</p>
<p class="govuk-body">{{application.personalDetails.immigrationStatusDetails}}</p>
{% endset %}

<!-- text: application.personalDetails.immigrationStatus + ' - ' + application.personalDetails.immigrationStatusDetails -->

{{ govukSummaryList({
  rows: [{
    key: {
      text: "First name"
    },
    value: {
      text: application.personalDetails.givenName
    }
  },
  {
    key: {
      text: "Last name"
    },
    value: {
      text: application.personalDetails.familyName
    }
  },
  {
    key: {
      text: "Date of birth"
    },
    value: {
      text: application.personalDetails.dateOfBirth | govukDate
    }
  },
  {
    key: {
      text: "Nationality"
    },
    value: {
      text: nationalityText
    }
  },
  {
    key: {
      text: "Right to work or study?"
    },
    value: {
      text: application.personalDetails.rightToWorkStudy
    }
  } if application.personalDetails.rightToWorkStudy.length,
  {
    key: {
      text: "Right to work or study how?"
    },
    value: {
      html: rightToWorkStudyHowHTML
    }
  } if application.personalDetails.rightToWorkStudyHow.length,
  {
    key: {
      text: "Immigration status"
    },
    value: {
      html: immigrationStatusHTML
    }
  } if application.personalDetails.immigrationStatus.length,
  {
    key: {
      text: "Date entered UK"
    },
    value: {
      text: application.personalDetails.dateEnteredUK | govukDate
    }
  } if application.personalDetails.dateEnteredUK.length,
  {
    key: {
      text: "Phone number"
    },
    value: {
      html: "<a href=\"tel:" + application.contactDetails.tel | replace(" ", "") + "\">" + application.contactDetails.tel + "</a>"
    }
  },
  {
    key: {
      text: "Email address"
    },
    value: {
      html: "<a href=\"mailto:" + application.contactDetails.email + "\">" + application.contactDetails.email + "</a>"
    }
  },
  {
    key: {
      text: "Contact address"
    },
    value: {
      html: application.contactDetails.address | toArray | join("<br>")
    }
  }]
}) }}
