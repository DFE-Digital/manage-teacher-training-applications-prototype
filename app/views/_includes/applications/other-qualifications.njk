<h3 class="govuk-heading-m govuk-!-margin-top-3 govuk-!-margin-bottom-2">Other qualifications</h3>

{{ govukSummaryList({
    rows: [
      {
        key: {
          text: "Do you want to add any A levels or other qualifications?"
        },
        value: {
          text: "No" if not application.otherQualifications else "Yes"
        }
      }
    ]
  }) }}

{% if application.otherQualifications %}

  <h4 class="govuk-heading-m">
    Details of other qualifications
  </h4>

   {% set rowData = [] %}
  {% for item in application.otherQualifications %}
    {# {% set institution = item.org if item.provenance == "domestic" else [item.org, item.country] | join(", ") %} #}
    {% set rows = rowData.push([{
      html: item.type
    }, {
      html: item.subject
    },{
      html: item.country
    } if hasOtherNonUkQualifications, {
      html: item.year
    }, {
      html: item.grade
    }]) %}
  {% endfor %}
  {{ govukTable({
    head: [{
      text: "Qualification"
    }, {
      text: "Subject"
    }, {
      text: "Country"
    } if hasOtherNonUkQualifications, {
      text: "Awarded"
    }, {
      text: "Grade"
    }],
    rows: rowData
  }) }}
{% endif %}
