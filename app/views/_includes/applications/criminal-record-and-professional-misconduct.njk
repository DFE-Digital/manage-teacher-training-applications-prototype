 <h2 class="govuk-heading-m govuk-!-margin-top-7 govuk-!-margin-bottom-2 govuk-!-font-size-27">Criminal record and professional misconduct</h2>

  {% set safeguardingValueHtml %}
    {% if application.safeguarding.response %}
      {% if canViewCriminalRecordAndProfessionalMisconductInformation %}
        <p>{{ application.safeguarding.details | nl2br }}</p>
      {% else %}
        You cannot view this because you do not have permission to view criminal record and professional misconduct information.
      {% endif %}
    {% endif %}
  {% endset %}

  {{ govukSummaryList({
    rows: [
      {
        key: {
          text: "Do you want to declare any safeguarding issues such as a criminal record or professional misconduct?"
        },
        value: {
          text: "Yes, I want to declare something" if application.safeguarding.response else "No"
        }
      },
      {
        key: {
          text: "Give any relevant information"
        },
        value: {
          html: safeguardingValueHtml
        }
      } if application.safeguarding.details
    ]
  }) }}
