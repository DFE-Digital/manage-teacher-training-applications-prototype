{% extends "_layout.njk" %}

{% set primaryNavId = 'interviews' %}
{% set title = "Interviews" %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{title}}</h1>

  <h2 class="govuk-heading-m govuk-!-margin-bottom-2">
    Upcoming interviews
  </h2>

  <table class="govuk-table">
    <thead class="govuk-table__head govuk-visually-hidden">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header ">Candidate</th>
        <th scope="col" class="govuk-table__header" >Date and time</th>
        <th scope="col" class="govuk-table__header ">Location</th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      {% for interview in futureInterviews %}
        <tr class="govuk-table__row">
          <td class="govuk-table__cell" style="width: 250px !important">
            <a href="/application/{{interview.app.id}}/interviews" class="govuk-link--no-visited-state">{{interview.interview.date | govukDateAtTime }}</a>
          </td>
          <td class="govuk-table__cell" style="width: 160px !important" >
            {{interview.app.personalDetails.givenName}} {{interview.app.personalDetails.familyName}}
          </td>

          <td class="govuk-table__cell">
            {{interview.app.provider}}
            {% if interview.app.interviewNeeds.length %}
              <p class="govuk-body govuk-!-font-size-16 govuk-!-margin-top-1">
              {{ appIcon({
                classes: "govuk-!-margin-right-1",
                icon: "tick",
                hidden: true
              }) }}
              Has interview preferences</p>
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <h2 class="govuk-heading-m govuk-!-margin-top-4 govuk-!-margin-bottom-2">
    Past interviews
  </h2>

  <table class="govuk-table">
    <thead class="govuk-table__head govuk-visually-hidden">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Candidate</th>
        {# <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Date and time</th> #}
        <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Location</th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      {% for interview in pastInterviews %}
        <tr class="govuk-table__row">
          <td class="govuk-table__cell" style="width: 250px !important">
            <a href="/application/{{interview.app.id}}/interviews" class="govuk-!-font-size-16 govuk-link--no-visited-state">{{interview.interview.date | govukDateAtTime }}</a>
            <p class=" govuk-!-margin-top-1 govuk-!-font-size-16 govuk-!-margin-bottom-0">{{interview.app.personalDetails.givenName}} {{interview.app.personalDetails.familyName}}</p>
          </td govuk-!-margin-top-1 >
          {# <td class="govuk-table__cell" style="width: 160px !important" >



          </td> #}

          <td class="govuk-table__cell">
            <p class="govuk-!-margin-bottom-1 govuk-!-font-size-16">{{ interview.app.course }} </p>
            {# <p class="govuk-caption-m govuk-!-font-size-16 govuk-!-margin-bottom-0">{{ interview.app.provider }} â€“ ratified by {{interview.app.accreditingbody}}</p> #}
            {% if interview.app.interviewNeeds.length %}
              <p class="govuk-body govuk-!-font-size-16 govuk-!-margin-top-1 govuk-!-margin-bottom-0">
              {{ appIcon({
                classes: "govuk-!-margin-right-1 =",
                icon: "tick",
                hidden: true
              }) }}
              Has interview preferences</p>
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  {{ appPagination({
      results: {
        from: 1,
        to: 15,
        count: 30
      },
        next: {
        text: 'Next',
        href: ''
      },
        items: [{
        text: '1',
        href: '/page=1',
        selected: true
      }, {
        text: '2',
        href: '/page=2'
      }]
    }) }}
    </div>

  </div>





{% endblock %}
