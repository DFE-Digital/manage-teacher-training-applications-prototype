{% extends "_layout.njk" %}

{% set primaryNavId = 'interviews' %}
{% set title = "Interviews" %}

{% block content %}
  <h1 class="govuk-heading-xl">{{title}}</h1>

  <table class="govuk-table">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header govuk-!-width-one-thir">Candidate</th>
        <th scope="col" class="govuk-table__header govuk-!-width-one-thir">Date and time</th>
        <th scope="col" class="govuk-table__header govuk-!-width-one-thir">Details</th>
        <th scope="col" class="govuk-table__header govuk-!-width-one-thir">Organisation</th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      {% for interview in interviews %}
        <tr class="govuk-table__row">
          <th class="govuk-table__cell">
            <a href="/application/{{interview.app.id}}/interviews">
              {{interview.app.personalDetails.givenName}} {{interview.app.personalDetails.familyName}}
            </a>
          </th>
          <td class="govuk-table__cell">{{interview.interview.date | govukDateAtTime }}</td>
          <td class="govuk-table__cell">{{interview.interview.details }}</td>
          <td class="govuk-table__cell">The Royal Borough Teaching School Alliance</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  {{ mojPagination({
      results: {
        from: 1,
        to: 15,
        count: 30
      },
        next: {
        text: 'Next',
        href: ''
      },
        items: [{
        text: '1',
        href: '/page=1',
        selected: true
      }, {
        text: '2',
        href: '/page=2'
      }]
    }) }}



{% endblock %}
