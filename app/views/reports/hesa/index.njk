{% extends "_layout.njk" %}

{% set primaryNavId = "reports" %}
{% set pageTitle = "Export data for Higher Education Statistics Agency (HESA)" %}

{% block pageTitle %}
{{ pageTitle + ((" - " + organisation.name) if organisation) }} – {{ serviceName }} – GOV.UK
{% endblock %}

{% block beforeContent %}
{{ govukBreadcrumbs({
  items: [{
    href: "/reports",
    text: "Reports"
  }, {
    text: pageTitle
  }]
}) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">
        {% if organisation %}
          <span class="govuk-caption-l">{{ organisation.name }}</span>
        {% endif %}
        {{ pageTitle }}
      </h1>

      <p class="govuk-body">Sex, disability and ethnicity information will be marked as confidential if you do not have permission to view it.</p>

      <h2 class="govuk-heading-m">
        2020 to 2021 (current)
      </h2>

      <p>The data will include all candidates who have accepted an offer since 6 October 2020.</p>

      <p><a href="#" download>Export data for 2020 to 2021 (CSV)</a></p>

      <h2 class="govuk-heading-m">
        2019 to 2020
      </h2>

      <p>The data will include all candidates who accepted an offer from 6 October 2019 to 3 October 2020.</p>

      <p><a href="#" download>Export data for 2019 to 2020 (CSV)</a></p>

    </div>
  </div>

{% endblock %}
