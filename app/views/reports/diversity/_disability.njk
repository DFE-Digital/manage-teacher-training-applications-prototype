<table id="sex" class="govuk-table">
  <caption class="govuk-table__caption govuk-table__caption--m govuk-visually-hidden">{{ pageName }} - disabled data</caption>
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Candidate is disabled</th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" style="width:20%">
        Number of candidates applied
      </th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" style="width:20%">
        Number of candidates recruited
      </th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" style="width:20%">
        Percentage of candidates recruited in the category
      </th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">

    {% for response in disabilityResponseData %}

      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header govuk-!-font-weight-regular">
          {{ response.title }}
        </th>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          {{ response.counts.received }}
        </td>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          {{ response.counts.recruited }}
        </td>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          {{ response.rates.group | numeral('0.0') }}%
        </td>
      </tr>

    {% endfor %}

  </tbody>
</table>

<table id="disability" class="govuk-table">
  <caption class="govuk-table__caption govuk-table__caption--m govuk-visually-hidden">{{ pageName }} - disability data</caption>
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Disability</th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" style="width:20%">
        Number of candidates applied
      </th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" style="width:20%">
        Number of candidates recruited
      </th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" style="width:20%">
        Percentage of candidates recruited in the category
      </th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">

    {% for disability in disabilityData %}

      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header govuk-!-font-weight-regular">
          {{ disability.title }}
          {% if disability.description.length %}
            <span class="govuk-hint govuk-!-margin-bottom-0">{{ disability.description }}</span>
          {% endif %}
        </th>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          {{ disability.counts.received }}
        </td>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          {{ disability.counts.recruited }}
        </td>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          {{ disability.rates.group | numeral('0.0') }}%
        </td>
      </tr>

    {% endfor %}

  </tbody>
</table>
