<table id="age" class="govuk-table">
  <caption class="govuk-table__caption govuk-table__caption--m govuk-visually-hidden">{{ pageName }} - age data</caption>
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Age group</th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" style="width:30%">
        Percentage of candidates in this age group who were recruited
      </th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" style="width:30%">
        Percentage of all candidates who were recruited and are in this age group
      </th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">

    {% for age in ageData %}

      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header govuk-!-font-weight-regular">
          {{ age.title }}
        </th>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          {{ age.rates.group | numeral('0.0') }}%
          <span class="govuk-hint govuk-!-margin-bottom-0">{{ age.counts.recruited }} of {{ age.counts.received }}</span>
        </td>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          {{ age.rates.recruited | numeral('0.0') }}%
          <span class="govuk-hint govuk-!-margin-bottom-0">{{ age.counts.recruited }} of {{ recruitedCount }}</span>
        </td>
      </tr>

    {% endfor %}

  </tbody>
</table>
