{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}
{% set name = application.personalDetails.name %}
{% set title = "Make a decision" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/applications/" + application.id
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">{{name}}</span>
        {{title}}
      </h1>

      <div class="app-box govuk-!-margin-bottom-7">
        <h2 class="govuk-heading-m govuk-!-margin-bottom-2">
          Course applied for
        </h2>

        {{ govukSummaryList({
          rows: [{
            key: {
              text: "Training provider"
            },
            value: {
              html: application.provider
            }
          }, {
            key: {
              text: "Course"
            },
            value: {
              html: application.course
            }
          }, {
            key: {
              text: "Full time or part time"
            },
            value: {
              html: application.studyMode
            }
          }, {
            key: {
              text: "Location"
            },
            value: {
              html: application.location
            }
          },{
            key: {
              text: "Accredited body"
            },
            value: {
              html: application.accreditedBody
            }
          }
          ]})
        }}
      </div>

      <form method="post">
        {{ govukRadios({
          fieldset: {
            legend: {
              text: "What is your response to this application?",
              classes: "govuk-fieldset__legend--m"
            }
          },
          idPrefix: "decision",
          name: "decision",
          items: [{
            value: "1",
            text: "Make an offer"
          },
          {
            value: "2",
            text: "Change course details and make an offer"
          },
          {
            value: "4",
            text: "Tell candidate the course is now full"
          },
          {
            value: "3",
            text: "Reject application"
          }]
        }) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
      <p class="govuk-body"><a href="/applications/{{ application.id }}">Cancel</a></p>

    </div>
  </div>

{% endblock %}
