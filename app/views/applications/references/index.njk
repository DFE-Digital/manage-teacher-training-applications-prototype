{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}
{% set subNavId = "references" %}
{% set name = application.personalDetails.name %}
{% set pageName = 'Application' %}
{% set title = pageName + ' - ' + application.personalDetails.name %}

{% block content %}

{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% set html %}
  <p class="govuk-notification-banner__heading">
    {{name}} updated their application.<br><br>
    <a class="govuk-notification-banner__link" href="/applications/{{application.id}}/timeline">View the timeline to see their updates</a>.
  </p>
{% endset %}

{{ govukNotificationBanner({
  html: html
}) }}

  {% include "_includes/applications/h1.njk" %}

  {% include "_includes/applications/sub-nav.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h2 class="govuk-heading-l govuk-!-margin-bottom govuk-!-font-size-36">
        References
      </h2>

      {% if application.status == 'Received' %}
        <p class="govuk-body">References will be requested when the candidate accepts an offer. Do not contact these people before then without permission from the candidate.</p>

      {% endif %}
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      {% include "_includes/applications/references.njk" %}

    </div>
  </div>

{% endblock %}
