{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}
{% set subNavId = "notes" %}
{% set status = application.status %}
{% set name = application.personalDetails.name %}
{% set title = 'Add note - ' + name %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/applications/" + application.id + "/notes"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set h1 %}
        <span class="govuk-caption-l">{{name}}</span>
        Add note
      {% endset %}
      <form method="post">
        {{ govukCharacterCount({
          label: {
            html: h1,
            classes: "govuk-label--l",
            isPageheading: true
          },
          maxlength: 500,
          id: "body",
          name: "body",
          type: "text"
        }) }}

        {{govukButton({
          text: "Save note"
        })}}
      </form>

    </div>
  </div>
{% endblock %}
