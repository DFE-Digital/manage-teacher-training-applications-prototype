  hint: {
    text: "123 Main Street"
  },
  checked: checked("['edit-course']['location']", "Location 2")
}, {
  value: "Location 3",
  text: "Location 3",
  hint: {
    text: "123 Main Street"
  },
  checked: checked("['edit-course']['location']", "Location 3")
}] -->

        {{ govukButton({
          text: "Continue"
        }) }}

      </form>

      <p class="govuk-body">
        <a href="/applications/{{ application.id }}/">Cancel</a>
      </p>

    </div>
  </div>
{% endblock %}
