{% extends "_layout.njk" %}

{% set primaryNavId = "applications" %}
{% set caption = "Change course - " + application.personalDetails.name %}
{% set title = "Funding type" %}

{% block beforeContent %}
{% if query.referrer == "location" %}
  {{ govukBackLink({
    text: "Back",
    href: "/applications/" + application.id + "/course/edit/location"
  }) }}
{% elif query.referrer == "check" %}
  {{ govukBackLink({
    text: "Back",
    href: "/applications/" + application.id + "/course/edit/check"
  }) }}
{% else %}
  {{ govukBackLink({
    text: "Back",
    href: "/applications/" + application.id
  }) }}
{% endif %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set headingHtml %}
        <span class="govuk-caption-l">{{ caption }}</span>
        {{ title }}
      {% endset %}

      <form action="/applications/{{ application.id }}/course/edit/funding-type" method="post" accept-charset="UTF-8" novalidate>

        {{ govukRadios({
          idPrefix: "edit-fundingType",
          name: "edit-course[fundingType]",
          fieldset: {
            legend: {
              html: headingHtml,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [{
            value: "Fee paying",
            text: "Fee paying",
            checked: checked("['edit-course']['fundingType']", "Fee paying")
          }, {
            value: "Salaried",
            text: "Salaried",
            checked: checked("['edit-course']['fundingType']", "Salaried")
          }]
        }) }}

        {{ govukButton({
          text: "Continue"
        }) }}

      </form>

      <p class="govuk-body">
        <a href="/applications/{{ application.id }}/course/edit/cancel">Cancel</a>
      </p>

    </div>
  </div>
{% endblock %}
