{% extends "_layout.njk" %}

{% set primaryNavId = "applications" %}
{% set caption = content.makeOffer.caption + ' - ' + application.personalDetails.name %}
{% set heading = 'Conditions of offer' %}
{% set title = heading + ' - ' + caption %}
{% set firstSubject = application.subject | first %}
{% set skeSubject = firstSubject.name | lower %}


{% block pageNavigation %}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    href: "/applications/" + applicationId + "/decision"
  })}}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">{{ caption }}</span>
        <h1 class="govuk-heading-l">Subject knowledge enhancement (SKE) courses</h1>


      <form action="/applications/{{ applicationId }}/offer/ske-answer" method="post" accept-charset="UTF-8" novalidate>

      {% if firstSubject.name == "French" %}

        <p class="govuk-body">The Department for Education (DfE) will pay candidates to take up to 2 language SKE courses if needed, so long as they:</p>

        <ul class="govuk-list govuk-list--bullet">
          <li>have a 2:2 degree or higher, or are expected to do so</li>
        </ul>

        {{ govukCheckboxes({
          name: "skeLanguage",
          fieldset: {
            legend: {
              text: "Do you require them to take a SKE course in any of these languages?",
              isPageHeading: false,
              classes: "govuk-fieldset__legend--s"
            }
          },
          hint: {
            text: "You can select a maximum of 2"
          },
          items: [
            {
              value: "French",
              text: "French"
            },
            {
              value: "Spanish",
              text: "Spanish"
            },
            {
              value: "German",
              text: "German"
            },
            {
              value: "Ancient languages",
              text: "Ancient languages"
            },
            {
              divider: "or"
            },
            {
              value: "no",
              text: "No, a subject knowledge enhancement course is not required"
            }
          ]
        }) }}

      {% elif firstSubject.name == "PE with Ebacc" %}


        <p class="govuk-body">The Department for Education (DfE) will pay candidates to take a SKE course if needed, so long as they:</p>

        <ul class="govuk-list govuk-list--bullet">
          <li>have a 2:2 degree or higher, or are expected to do so</li>
          <li>are eligible for student finance (home fee status)</li>
        </ul>


        <input type="hidden" name="skeRequired" value="">
        <input type="hidden" name="skeReason" value="">
        {{ govukRadios({
          name: "skeEbacc",
          fieldset: {
            legend: {
              text: "Do you require them to take an 8 week SKE course in an Ebacc subject?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--s"
            }
          },
          items: [
            {
              value: "Biology",
              text: "Biology"
            },
            {
              value: "Chemistry",
              text: "Chemistry"
            },
            {
              value: "English",
              text: "English"
            },
            {
              value: "Mathematics",
              text: "Mathematics"
            },
            {
              value: "Physics",
              text: "Physics"
            },
            {
              value: "French",
              text: "French"
            },
            {
              value: "Spanish",
              text: "Spanish"
            },
            {
              value: "German",
              text: "German"
            },
            {
              divider: "or"
            },
            {
              value: "no",
              text: "No, a subject knowledge enhancement course is not required"
            }
          ]
        }) }}


      {% else %}

        <p class="govuk-body">The Department for Education (DfE) will pay candidates to take a SKE course if needed, so long as they:</p>

        <ul class="govuk-list govuk-list--bullet">
          <li>have a 2:2 degree or higher, or are expected to do so</li>
          <li>are eligible for student finance (home fee status)</li>
        </ul>

        {{ govukRadios({
          name: "skeRequired",
          fieldset: {
            legend: {
              text: "Do you require " + " to take a SKE course in " + (skeSubject) + " that will be funded by the DfE?",
              isPageHeading: false,
              classes: "govuk-fieldset__legend--s"
            }
          },
          items: [
            {
              value: "yes",
              text: "Yes"
            },
            {
              value: "no",
              text: "No"
            }
          ]
        }) }}

      {% endif %}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}

{% block pageScripts %}
  <script>
    new AppFrontend.AddAnother({
      container: $('.app-add-another'),
      allowNoFields: true
    });
  </script>
{% endblock %}
