{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}
{% set name = application.personalDetails.name %}
{% set caption = 'Withdraw offer' + ' - ' + name %}

{% set title = "Check details and withdraw offer" %}
{% set buttonText = "Withdraw offer" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/applications/" + application.id + "/offer/withdraw/other-reasons-for-rejection/"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">{{caption}}</span>
      <h1 class="govuk-heading-l">{{title}}</h1>

      {% set rejectionReasons = data.rejection %}
      {% set showChangeLinks = true %}
      {% include "_includes/candidate-feedback.njk" %}

      {{ govukWarningText({
        text: "The candidate will be sent an email with details of why youâ€™ve withdrawn your offer.",
        iconFallbackText: "Fallback text"
      }) }}

      <form method="post">
        {{ govukButton({
          text: buttonText
        }) }}
      </form>

      <p class="govuk-body"><a class="govuk-link--no-visited-state" href="/applications/{{ application.id }}/offer">Cancel</a></p>
    </div>
  </div>
{% endblock %}
