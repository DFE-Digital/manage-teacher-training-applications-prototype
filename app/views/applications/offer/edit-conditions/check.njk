{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}
{% set name = application.personalDetails.name %}
{% set title = "Check and send new offer" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: '/applications/' + application.id + '/offer/edit-conditions'
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">{{name}}</span>
      <h1 class="govuk-heading-l">{{title}}</h1>

      {{appOfferPanel({
        provider: {
          value: application.provider,
          href: "#"
        },
        course: {
          value: application.course,
          href: "#"
        },
        location: {
          value: application.location,
          href: "#"
        },
        studyMode: {
          value: "Full time",
          href: "#"
        },
        conditions: {
          items: conditions
        },
        changeConditions: {
          href: "/applications/" + application.id + "/offer/edit-conditions"
        }
      })}}

      {% if conditions.length %}
        <p>By sending this offer, you’re guaranteeing the candidate a place on this course as long as they meet the conditions.</p>
      {% else %}
        <p>By sending this offer, you’re guaranteeing the candidate a place on this course.</p>
      {% endif %}

      <form method="post">
        {{ govukButton({
          text: "Send new offer"
        }) }}
      </form>
      <p class="govuk-body"><a href="/applications/{{ application.id }}/offer">Cancel</a></p>
    </div>
  </div>
{% endblock %}
