{% extends "_layout.njk" %}

{% set name = application.personalDetails.name %}

{% set title = "Check and send new offer" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/applications/" + application.id + '/offer/edit-provider/location'
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">{{name}}</span>
      <h1 class="govuk-heading-l">{{title}}</h1>

      {{appOfferPanel({
        provider: {
          value: data['change-offer']['provider'],
          href: "/applications/" + application.id + "/offer/edit-provider"
        },
        course: {
          value: data['change-offer']['course'],
          href: "/applications/" + application.id + "/offer/edit-provider/course"
        },
        location: {
          value: data['change-offer']['location'],
          href: "/applications/" + application.id + "/offer/edit-provider/location"
        },
        studyMode: {
          value: "Full time",
          href: "#"
        },
        accreditedBody: {
          value: application.offer.accreditedBody
        },
        conditions: {
          items: conditions
        },
        changeConditions: {
          href: "#"
        }
      })}}

      {# {{ govukWarningText({
        text: "When you send this offer, you guarantee a place on this course as long as the candidate meets the conditions."
      }) }} #}

      <p>When you send this offer, you guarantee a place on the course as long as the candidate meets the conditions.</p>

      <p>Users at {{application.offer.provider}} will be told by email that the candidate has been offered a course at {{data['change-offer']['provider']}}.</p>

      <form method="post">
        {{ govukButton({
          text: "Send new offer"
        }) }}
      </form>
      <p class="govuk-body"><a href="/applications/{{ application.id }}/offer">Cancel</a></p>
    </div>
  </div>

{% endblock %}
