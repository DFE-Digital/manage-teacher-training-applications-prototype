{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}

{% set name = application.personalDetails.name %}
{% set caption = content.deferOffer.caption + ' - ' + name %}
{% set title = content.deferOffer.checkAnswers.heading %}

{% block beforeContent %}
  {{ govukBackLink({
    href: "/applications/" + application.id + "/offer"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">
        {{caption}}
      </span>
      <h1 class="govuk-heading-l">
        {{title}}
      </h1>

      <p>Youâ€™ll need to confirm your deferred offer at the start of the next recruitment cycle.</p>

      {{ govukWarningText({
        text: "The candidate will be sent an email to tell them that their offer has been deferred.",
        iconFallbackText: "Fallback text"
      }) }}

      <form method="post">
        {{ govukButton({
          text: content.deferOffer.checkAnswers.button
        }) }}
      </form>

    </div>
  </div>

{% endblock %}
