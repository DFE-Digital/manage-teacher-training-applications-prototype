{% extends "_layout.njk" %}

{% set name = application.personalDetails.name %}
{% set title = "Select location" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/applications/" + application.id + "/offer/change-course"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set h1 %}
        <span class="govuk-caption-l">{{name}}</span>
        {{title}}
      {% endset %}
      <form method="post">

        {{ govukRadios({
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [{
            value: "Alliance Academy, Edgeware, Road Name, SW1 1AA",
            text: "Alliance Academy",
            hint: { text: 'Edgeware, Road Name, SW1 1AA' }
          }, {
            value: "Bruntcliffe Academy, Bruntcliffe Lane, Morley, Leeds, LS27 0LZ",
            text: "Bruntcliffe Academy",
            hint: { text: 'Bruntcliffe Lane, Morley, Leeds, LS27 0LZ' }
          }]
        } | decorateAttributes(data, 'data["change-offer"]["location"]') ) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
      <p class="govuk-body"><a href="/applications/{{ application.id }}/offer">Cancel</a></p>
    </div>
  </div>
{% endblock %}
