{% extends "_layout.njk" %}

{% set primaryNavId = "applications" %}
{% set caption = application.personalDetails.name %}
{% set title = "Course" %}

{% block pageNavigation %}
{% if query.referrer == "check" %}
  {{ govukBackLink({
    href: "/applications/" + application.id + "/offer/edit/check"
  }) }}
{% elif query.referrer == "offer" %}
  {{ govukBackLink({
    href: "/applications/" + application.id + "/offer"
  }) }}
{% else %}
  {{ govukBackLink({
    href: "/applications/" + application.id + "/offer/edit/provider"
  }) }}
{% endif %}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    {% set headingHtml %}
      <span class="govuk-caption-l">{{ caption }}</span>
      {{ title }}
    {% endset %}

    <form action="{{ actions.save }}" method="post" accept-charset="UTF-8" novalidate>

      {{ govukRadios({
        idPrefix: "edit-course",
        name: "[edit-offer][course]",
        fieldset: {
          legend: {
            html: headingHtml,
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        items: courses
      }) }}

      {{ govukButton({
        text: "Continue"
      }) }}

    </form>

    <p class="govuk-body">
      <a class="govuk-link" href="{{ actions.cancel }}">Cancel</a>
    </p>

  </div>
</div>
{% endblock %}
