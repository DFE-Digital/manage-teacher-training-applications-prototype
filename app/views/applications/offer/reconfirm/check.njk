{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}
{% set name = application.personalDetails.name %}

{% set title = "Review offer" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/applications/" + application.id + "/offer/reconfirm/statuses"
  }) }}
{% endblock %}

{% set locationHtml %}
<p class="govuk-body">
  {% if application.offer.location.length %}
    {{ application.offer.location }}
  {% else %}
    {{ application.location.name }}<br>
    {% if application.location.address.address1.length %}
      {{ application.location.address.address1 }}<br>
    {% endif %}
    {% if application.location.address.address2.length %}
      {{ application.location.address.address2 }}<br>
    {% endif %}
    {% if application.location.address.address3.length %}
      {{ application.location.address.address3 }}<br>
    {% endif %}
    {% if application.location.address.town.length %}
      {{ application.location.address.town }}<br>
    {% endif %}
    {% if application.location.address.postcode.length %}
      {{ application.location.address.postcode }}<br>
    {% endif %}
  {% endif %}
</p>
{% endset %}

{% block content %}
  {% set conditionsHtml %}
    {% if conditions.length %}
      <ul class="govuk-list govuk-list--bullet">
        {% for condition in conditions %}
          <li>
            {{ condition.description }}
            {% if condition.status == "Pending" %}
                {% set statusClass = "app-tag--grey" %}
              {% elseif condition.status == "Met" %}
                {% set statusClass = "app-tag--green" %}
              {% elseif condition.status == "Not met" %}
                {% set statusClass = "app-tag--red" %}
              {% endif %}
              {{govukTag({ text: condition.status, classes: statusClass })}}
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <p class="govuk-body">None specified</p>
    {% endif %}
  {% endset %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">

      <span class="govuk-caption-l">{{name}}</span>
      <h1 class="govuk-heading-l">{{title}}</h1>

      {{appOfferPanel({
        provider: {
          value: application.offer.provider,
          href: "#"
        },
        course: {
          value: application.offer.course,
          href: "#"
        },
        location: {
          value: locationHtml,
          href: "#"
        },
        studyMode: {
          value: "Full time",
          href: "#"
        },
        accreditedBody: {
          value: application.offer.accreditedBody
        },
        conditions: {
          items: conditions
        },
        changeConditions: {
          href: "/applications/" + application.id + "/offer/reconfirm/conditions"
        },
        changeStatus: {
          href: "/applications/" + application.id + "/offer/reconfirm/statuses"
        }
      })}}

      {{govukWarningText({
        text: "Weâ€™ll email the candidate to confirm their new offer and remind them of the conditions for it."
      })}}

      <form method="post">
        {{ govukButton({
          text: "Confirm offer"
        }) }}
      </form>
      <p class="govuk-body"><a href="/applications/{{ application.id }}">Cancel</a></p>
    </div>
  </div>
{% endblock %}
