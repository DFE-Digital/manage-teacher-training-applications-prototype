{% extends "_layout.njk" %}

{% set primaryNavId = "statistics" %}
{% set pageName = "Change report settings" %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: "/statistics/" + section + "/" + report
}) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <span class="govuk-caption-l">
        Courses
      </span>
      {{ pageName }}
    </h1>

    <form action="/statistics/{{ report }}/settings" method="post" accept-charset="UTF-8" novalidate>

      {% set legendText %}
        {% if counter == 2 %}
        Show in columns
        {% elif counter == 3 %}
        Split {{ data.statisticsOptions.dimension2 | getStatisticsOptionLabel | lower }} columns by
        {% else %}
        Split courses by
        {% endif %}
      {% endset %}

      {{ govukRadios({
        idPrefix: "statisticsOptions",
        name: "statisticsOptions[dimension" + counter + "]",
        fieldset: {
          legend: {
            text: legendText,
            classes: "govuk-fieldset__legend--m"
          }
        },
        items: [
          {
            value: "cycle",
            text: "cycle" | getStatisticsOptionLabel,
            checked: checked(data.statisticsOptions.dimension2, "cycle") == "checked"
          } if (chosenOptions and "cycle" not in chosenOptions),
          {
            value: "status",
            text: "status" | getStatisticsOptionLabel,
            checked: checked(data.statisticsOptions.dimension2, "status") == "checked"
          } if (chosenOptions and "status" not in chosenOptions),
          {
            value: "provider",
            text: "provider" | getStatisticsOptionLabel,
            checked: checked(data.statisticsOptions.dimension2, "provider") == "checked"
          } if (chosenOptions and "provider" not in chosenOptions),
          {
            value: "accreditedBody",
            text: "accreditedBody" | getStatisticsOptionLabel,
            checked: checked(data.statisticsOptions.dimension2, "accreditedBody") == "checked"
          } if (chosenOptions and "accreditedBody" not in chosenOptions),
          {
            value: "location",
            text: "location" | getStatisticsOptionLabel,
            checked: checked(data.statisticsOptions.dimension2, "location") == "checked"
          } if (chosenOptions and "location" not in chosenOptions),
          {
            value: "studyMode",
            text: "studyMode" | getStatisticsOptionLabel,
            checked: checked(data.statisticsOptions.dimension2, "studyMode") == "checked"
          } if (chosenOptions and "studyMode" not in chosenOptions),
          {
            value: "subjectLevel",
            text: "subjectLevel" | getStatisticsOptionLabel,
            checked: checked(data.statisticsOptions.dimension2, "subjectLevel") == "checked"
          } if (chosenOptions and "subjectLevel" not in chosenOptions),
          {
            value: "fundingType",
            text: "fundingType" | getStatisticsOptionLabel,
            checked: checked(data.statisticsOptions.dimension2, "fundingType") == "checked"
          } if (chosenOptions and "fundingType" not in chosenOptions)
        ]
      }) }}

      {{ govukButton({
        name: "button[submit]",
        value: "save",
        text: "View report"
      }) }}

      {{ govukButton({
        name: "button[submit]",
        value: "continue",
        text: "Split data further",
        classes: "govuk-button--secondary"
      }) if counter < 4 }}

      <p class="govuk-body">
        <a href="/statistics/{{ section }}/{{ report }}/remove-all-settings">Cancel</a>
      </p>

    </form>

  </div>
  <div class="govuk-grid-column-one-third">

  </div>
</div>

{% endblock %}
