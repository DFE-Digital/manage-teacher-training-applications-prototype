{% extends "_layout.njk" %}

{% set primaryNavId = "statistics" %}
{% set sectionName = section | capitalize %}
{% set pageName = "Courses by status" %}

{% block beforeContent %}
{{ govukBreadcrumbs({
  items: [{
    href: "/statistics",
    text: "Statistics"
  }, {
    text: pageName
  }]
}) }}
{% endblock %}

{% block content %}

{% include "_includes/statistics/header.njk" %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">

    <p class="govuk-body">
      <a class="govuk-link" href="/statistics/{{ section }}/{{ report }}/configure">Configure report</a>
    </p>

    {% if hasOptions %}
      {% include "_includes/statistics/selected-config-options.njk" %}
    {% endif %}

    <table class="govuk-table app-table">
      <!-- <caption class="govuk-table__caption govuk-table__caption--m govuk-!-margin-top-5">{{ pageName }}</caption> -->
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th scope="col" class="govuk-table__header">Course</th>
          {% for status in statuses %}
            {% if (data.statistics.status and status in data.statistics.status) or (not data.statistics.status.length) %}
              <th scope="col" class="govuk-table__header">{{ status }}</th>
            {% endif %}
          {% endfor %}
        </tr>
      </thead>
      <tbody class="govuk-table__body">
        {% for subject in subjects %}
          {% if (data.statistics.subjectLevel and subject.level in data.statistics.subjectLevel) or (not data.statistics.subjectLevel.length) %}
            <tr class="govuk-table__row">
              {% if data.statistics.cycle.length %}
                <th scope="row" class="govuk-table__header">{{ subject.name }} (AB{{ subject.code }})</th>
              {% else %}
                <td scope="row" class="govuk-table__cell">{{ subject.name }} (AB{{ subject.code }})</td>
              {% endif %}
              {% for status in statuses %}
                {% if (data.statistics.status and status in data.statistics.status) or (not data.statistics.status.length) %}
                  <td class="govuk-table__cell">{{ subjectCounts[subject.name][status] }}</td>
                {% endif %}
              {% endfor %}
            </tr>
            {% if data.statistics.cycle %}
              {% for cycle in cycles %}
                {% if cycle in data.statistics.cycle %}
                  <tr class="govuk-table__row">
                    <td scope="row" class="govuk-table__cell app-table__cell--indent">{{ cycle }}</td>
                    {% for status in statuses %}
                      {% if (data.statistics.status and status in data.statistics.status) or (not data.statistics.status.length) %}
                        <td class="govuk-table__cell">{{ subjectCounts[subject.name][status] }}</td>
                      {% endif %}
                    {% endfor %}
                  </tr>
                {% endif %}
              {% endfor %}
            {% endif %}
          {% endif %}
        {% endfor %}
      </tbody>
    </table>

    <p class="govuk-body">
      <a class="govuk-link" href="#">Download <span class="govuk-visually-hidden">{{ pageName | lower }}</span> data</a>
    </p>

  </div>
</div>

{% endblock %}
