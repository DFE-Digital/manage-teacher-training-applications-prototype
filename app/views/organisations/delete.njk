{% extends "_layout.njk" %}

{% set primaryNavId = 'users' %}
{% set title = "Harry Potter" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/users/show"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-xl">Harry Potter</span>
      <h1 class="govuk-heading-xl">Are you sure you want to delete this user’s account?</h1>

      <form novalidate method="post">
        {{ govukButton({
          text: "Yes I’m sure – delete this account",
          classes: "govuk-button--warning"
        }) }}
      </form>
    </div>
  </div>

{% endblock %}
