{% extends "_layout.njk" %}

{% set primaryNavId = 'organisations' %}
{% set title = "Teaching Excellence SCITT" %}

{% block content %}

  {{ appBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flashMessage+"</h2>",
    type: "success",
    icon: false
  }) if flashMessage }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{title}}</h1>

      {% set tick %}
        {{ appIcon({
          classes: "govuk-!-margin-right-1",
          icon: "tick",
          hidden: true
        }) }}
      {% endset %}

      <h2 class="govuk-heading-m">
      For courses ratified by Teaching Excellence SCITT and run by Highfield Academy Alliance
      </h2>

      {{appBanner({
        text: "Contact Highfield Academy Alliance to change permissions.",
        classes: "govuk-!-margin-bottom-4"
      })}}

      <p>The following organisation(s) can make decisions:</p>

      <ul class="govuk-list">
        <li>{{tick | safe }} Teaching Excellence SCITT</li>
      </ul>

      <p>The following organisation(s) can see safeguarding information:</p>

      <ul class="govuk-list">
        <li>{{tick | safe }} Highfield Academy Alliance</li>
      </ul>

      <h2 class="govuk-heading-m">
      For courses ratified by Teaching Excellence SCITT and run by Three Trees Teaching School
      </h2>

      {{appBanner({
        text: "Contact Three Trees Teaching School to change permissions.",
        classes: "govuk-!-margin-bottom-4"
      })}}

      <p>The following organisation(s) can make decisions:</p>

      <ul class="govuk-list">
        <li>{{tick | safe }} Teaching Excellence SCITT</li>
      </ul>

      <p>The following organisation(s) can see safeguarding information:</p>

      <ul class="govuk-list">
        <li>{{tick | safe }} Three Trees Teaching School</li>
      </ul>

      <h2 class="govuk-heading-m">
      For courses ratified by Teaching Excellence SCITT and run by Westfield TSA
      </h2>

      {{appBanner({
        text: "Contact Westfield TSA to change permissions.",
        classes: "govuk-!-margin-bottom-4"
      })}}

      <p>The following organisation(s) can make decisions:</p>

      <ul class="govuk-list">
        <li>{{tick | safe }} Teaching Excellence SCITT</li>
      </ul>

      <p>The following organisation(s) can see safeguarding information:</p>

      <ul class="govuk-list">
        <li>{{tick | safe }} Westfield TSA</li>
      </ul>

      <h2 class="govuk-heading-m">
      For courses ratified by Teaching Excellence SCITT and run by Your Teaching First TSA
      </h2>

      <p>The following organisation(s) can make decisions:</p>

      <ul class="govuk-list">
        <li>{{tick | safe }} Teaching Excellence SCITT</li>
      </ul>

      <p>The following organisation(s) can see safeguarding information:</p>

      <ul class="govuk-list">
        <li>{{tick | safe }} Your Teaching First TSA </li>
      </ul>

      <p>You can also <a href="/organisations/show3">manage permissions for Your Teaching First TSA</a>.</p>

    </div>
  </div>

{% endblock %}
