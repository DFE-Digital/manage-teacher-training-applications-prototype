{% extends "_layout.njk" %}

{% set primaryNavId = 'organisations' %}
{% set title = "Millais Alliance" %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Organisations",
      href: "/organisations"
    }, {
      text: title
    }]
  }) if not data.bare }}
{% endblock %}

{% block content %}

  {{ appBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flashMessage+"</h2>",
    type: "success",
    icon: false
  }) if flashMessage }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{title}}</h1>

      {% set permissionsOneHtml %}
          <p>University of Brighton can:</p>
          <ul class="list list--bullet">
            <li>make decisions</li>
            <li>see safeguarding information</li>
          </ul>
          <p>The Millais Alliance can:</p>
          <ul class="list list--bullet">
            <li>make decisions</li>
            <li>see safeguarding information</li>
          </ul>
        {% endset %}
        {% set permissionsTwoHtml %}
          <p>University of Sussex can:</p>
          <ul class="list list--bullet">
            <li>make decisions</li>
            <li>see safeguarding information</li>
          </ul>
          <p>The Millais Alliance can:</p>
          <ul class="list list--bullet">
            <li>make decisions</li>
            <li>see safeguarding information</li>
          </ul>
        {% endset %}
        {% set permissionsThreeHtml %}
          <p>University of Chichester can:</p>
          <ul class="list list--bullet">
            <li>make decisions</li>
            <li>see safeguarding information</li>
          </ul>
          <p>The Millais Alliance can:</p>
          <ul class="list list--bullet">
            <li>make decisions</li>
            <li>see safeguarding information</li>
          </ul>
        {% endset %}
        {{ govukSummaryList({
          rows: [
            {
              key: {
                text: "For courses run by The Millais Alliance and ratified by University of Brighton"
              },
              value: {
                html: permissionsOneHtml
              },
              actions: {
                items: [
                  {
                    href: "/onboard/step2",
                    text: "Change",
                    visuallyHiddenText: "name"
                  }
                ]
              }
            },
            {
              key: {
                text: "Courses run by The Millais Alliance and ratified by University of Sussex"
              },
              value: {
                html: permissionsTwoHtml
              },
              actions: {
                items: [
                  {
                    href: "/onboard/step3",
                    text: "Change",
                    visuallyHiddenText: "name"
                  }
                ]
              }
            },
            {
              key: {
                text: "Courses run by The Millais Alliance and ratified by University of Chichester"
              },
              value: {
                html: permissionsThreeHtml
              },
              actions: {
                items: [
                  {
                    href: "/onboard/step4",
                    text: "Change",
                    visuallyHiddenText: "name"
                  }
                ]
              }
            }
          ]
        }) }}



    </div>
  </div>

{% endblock %}
