{% extends "_layout.njk" %}

{% set primaryNavId = 'organisations' %}
{% set title = data.organisations[4].name %}

{% block content %}

  {{ appBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flashMessage+"</h2>",
    type: "success",
    icon: false
  }) if flashMessage }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{title}}</h1>

      {% set tick %}
        {{ appIcon({
          classes: "govuk-!-margin-right-1",
          icon: "tick",
          hidden: true
        }) }}
      {% endset %}

      <h2 class="govuk-heading-m">
        For courses run by {{ data.organisations[4].name }} and ratified by {{ data.organisations[0].name }}
      </h2>

      <p>The following organisation(s) can make decisions:</p>

      <ul class="govuk-list">
        <li>{{tick | safe }} {{ data.organisations[0].name }}</li>
      </ul>

      <p>The following organisation(s) can see safeguarding information:</p>

      <ul class="govuk-list">
        <li>{{tick | safe }} {{ data.organisations[4].name }}</li>
      </ul>

      <p><a href="/organisations/edit">Change <span class="govuk-visually-hidden">permissions for {{ data.organisations[4].name }}</span></a></p>

    </div>
  </div>

{% endblock %}
