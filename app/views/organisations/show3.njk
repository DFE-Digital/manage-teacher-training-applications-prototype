{% extends "_layout.njk" %}

{% set primaryNavId = 'organisations' %}
{% set title = "Your Teaching First TSA" %}

{% block content %}

  {{ appBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flashMessage+"</h2>",
    type: "success",
    icon: false
  }) if flashMessage }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{title}}</h1>

      {% set tick %}
        {{ appIcon({
          classes: "govuk-!-margin-right-1",
          icon: "tick",
          hidden: true
        }) }}
      {% endset %}

      <h2 class="govuk-heading-m">
        For courses run by Your Teaching First TSA and ratified by Teaching Excellence SCITT
      </h2>

      <p class="govuk-!-margin-bottom-1">Your Teaching First TSA can:</p>
      <ul class="govuk-list">
        <li>{{tick | safe }} view applications</li>
        <li>{{tick | safe}} access safeguarding information</li>
      </ul>

      <p class="govuk-!-margin-bottom-1">Teaching Excellence SCITT can:</p>
      <ul class="govuk-list">
        <li>{{tick | safe }} view applications</li>
        <li>{{tick | safe}} make decisions</li>
      </ul>

      <p><a href="/organisations/edit">Change <span class="govuk-visually-hidden">permissions for Your Teaching First TSA</span></a></p>

    </div>
  </div>

{% endblock %}
