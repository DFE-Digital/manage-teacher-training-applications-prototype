{% extends "_layout.njk" %}

{% set primaryNavId = 'organisations' %}
{% set title = "Organisational permissions" %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Your account",
      href: "/account"
    }, {
      text: title,
      href: "/organisations"
    }]
  }) }}
{% endblock %}

{% block content %}
  {{ appBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flashMessage+"</h2>",
    type: "success",
    icon: false
  }) if flashMessage }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{title}}</h1>

      <p>You can set permissions for the following organisations. These settings will be applied at the organisational level â€“ the organisation itself will then be able to customise them for its own users.</p>

      {% for org in data.user.organisations %}
        <div class="app-application-card">
          <div>
            <h2 class="govuk-heading-m govuk-!-margin-bottom-0"><a class="govuk-link govuk-link--no-visited-state" href="/organisations/{{org.id}}">{{ org.name }}</a></h2>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

{% endblock %}
