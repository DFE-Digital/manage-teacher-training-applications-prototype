{% extends "_layout.njk" %}

{% set primaryNavId = "reports" %}
{% set pageName = "Reports" %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l">
      {{ pageName }}
    </h1>

    {% for organisation in organisations %}

      {% if organisations.length > 1 %}
        <h2 class="govuk-heading-m">{{ organisation.name }}</h2>
      {% endif %}

      <ul class="govuk-list govuk-list--spaced">
        <li>
          <a class="govuk-link" href="/reports/{{ organisation.id }}/status-of-applications">
            Status of applications <span class="govuk-visually-hidden">for {{ organisation.name }}</span>
          </a>
        </li>
        <li>
          <a class="govuk-link" href="/reports/{{ organisation.id }}/progress-of-applications">
            Progress of applications <span class="govuk-visually-hidden">for {{ organisation.name }}</span>
          </a>
        </li>
        <li>
          <a class="govuk-link" href="/reports/{{ organisation.id }}/hesa">
            Export data for Higher Education Statistics Agency (HESA) <span class="govuk-visually-hidden">for {{ organisation.name }}</span>
          </a>
        </li>
        <li>
          <a class="govuk-link" href="/reports/{{ organisation.id }}/export">
            Export application data <span class="govuk-visually-hidden">for {{ organisation.name }}</span>
          </a>
        </li>
      </ul>

    {% endfor %}

  </div>
</div>

{% endblock %}
