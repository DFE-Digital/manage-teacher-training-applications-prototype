{% extends "_layout.njk" %}

{% set primaryNavId = "data" %}
{% set pageName = "Reports" %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l">
      {{ pageName }}
    </h1>

    {% if userOrganisations.length > 1 %}

      <h2 class="govuk-heading-m">Status of applications (2020 to 2021)</h2>

      <ul class="govuk-list govuk-list--spaced">
        {% for organisation in userOrganisations %}
          <li>
            <a class="govuk-link" href="/reports-and-export-data/{{ organisation.id }}/status-of-applications">{{ organisation.name }}</a>
          </li>
        {% endfor %}
      </ul>

      <h2 class="govuk-heading-m">Progress of applications (2020 to 2021)</h2>

      <ul class="govuk-list govuk-list--spaced">
        {% for organisation in userOrganisations %}
          <li>
            <a class="govuk-link" href="/reports-and-export-data/{{ organisation.id }}/progress-of-applications">{{ organisation.name }}</a>
          </li>
        {% endfor %}
      </ul>

    {% else %}

      <ul class="govuk-list govuk-list--spaced">
        <li>
          <a class="govuk-link" href="/reports/status-of-applications">Status of applications (2020 to 2021)</a>
        </li>
        <li>
          <a class="govuk-link" href="/reports/progress-of-applications">Progress of applications (2020 to 2021)</a>
        </li>
      </ul>

    {% endif %}

    <h2 class="govuk-heading-m">Data</h2>

    <ul class="govuk-list govuk-list--spaced">
      <li>
        <a class="govuk-link" href="/reports/hesa">Export data for Higher Education Statistics Agency (HESA)</a>
      </li>
      <li>
        <a class="govuk-link" href="/reports/export">Export application data</a>
      </li>
    </ul>

  </div>
</div>

{% endblock %}
