{% extends "_layout.njk" %}

{% set primaryNavId = "reports" %}
{% set pageName = "Candidate success rate" %}

{% block beforeContent %}
{{ govukBreadcrumbs({
  items: [{
    href: "/reports",
    text: "Reports"
  }, {
    text: pageName
  }]
}) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        {% if organisation %}
          <span class="govuk-caption-l">{{ organisation.name }}</span>
        {% endif %}
        {{ pageName }}
      </h1>

      {#{ govukButton({
        text: "Export report",
        href: "/reports/" + organisation.id + "/progress-of-applications/download",
        classes: "govuk-button--secondary",
        attributes: {
          download: true
        }
      }) }#}

      <table id="conversion" class="govuk-table">
        <caption class="govuk-table__caption govuk-table__caption--m govuk-visually-hidden">{{ pageName }}</caption>
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header" aria-sort="ascending">Course</th>
            <!-- <th scope="col" class="govuk-table__header" aria-sort="none">Partner</th> -->
            <th scope="col" class="govuk-table__header govuk-table__header--numeric" aria-sort="none">Number</th>
            <th scope="col" class="govuk-table__header govuk-table__header--numeric" aria-sort="none">Percentage</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">

          {% for row in conversionData %}

            <tr class="govuk-table__row">
              <td class="govuk-table__cell" data-sort-value="{{ row.title }} {{ row.code }}">
                <a class="govuk-link" href="/reports/{{ organisation.id }}/candidate-success/{{ row.code }}">
                  {{ row.title }} {{ "(" + row.code + ")" if row.code }}
                </a>
                <span class="govuk-hint govuk-!-margin-bottom-0">{{ row.provider }}</span>
              </td>
              <!-- <td class="govuk-table__cell">
                {{ row.provider }}
              </td> -->
              <td class="govuk-table__cell govuk-table__cell--numeric" data-sort-value="{{ row['rejection']['number'] }}">
                {{ row['overall_conversion']['number'] | numeral('0,0') }}
              </td>
              <td class="govuk-table__cell govuk-table__cell--numeric" data-sort-value="{{ row['rejection']['percentage'] }}">
                {{ row['overall_conversion']['percentage'] | numeral('0') + "%" }}
              </td>
            </tr>

          {% endfor %}

        </tbody>
      </table>

      {#% for row in conversionData %}

        {% if row.code | upper != "AVERAGE" %}

        {% set courseName = row.title + (" (" + row.code + ")") if row.code %}

        <h3 id="{{ courseName | slugify }}" class="govuk-heading-m {{- ' govuk-!-margin-top-9' if loop.index > 1 }}">
          <span class="govuk-caption-m">{{ row.provider }}</span>
          {{ courseName }}
        </h3>

        <dl class="govuk-summary-list">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key govuk-!-width-one-half">
              <!-- Label -->
            </dt>
            <dd class="govuk-summary-list__key govuk-!-width-one-quarter">
              Number
            </dd>
            <dd class="govuk-summary-list__key govuk-!-width-one-quarter">
              Percentage
            </dd>
          </div>
          {% for stage in stages %}
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key govuk-!-width-one-half">
              {{ stage.description }}
            </dt>
            <dd class="govuk-summary-list__value govuk-!-width-one-quarter">
              {{ row[stage.code]['number'] | numeral('0') }}
            </dd>
            <dd class="govuk-summary-list__value govuk-!-width-one-quarter">
              {{ row[stage.code]['percentage'] | numeral('0') + "%" }}
            </dd>
          </div>
          {% endfor %}
        </dl>

        {% endif %}

      {% endfor %#}

    </div>
  </div>

{% endblock %}

{% block pageScripts %}
<script>
  new AppFrontend.SortableTable({
    table: $('#conversion')
  });
</script>
{% endblock %}
