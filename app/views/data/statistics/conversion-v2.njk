{% extends "_layout.njk" %}

{% set primaryNavId = "reports" %}
{% set pageName = "Progress of applications" %}

{% block beforeContent %}
{{ govukBreadcrumbs({
  items: [{
    href: "/reports",
    text: "Reports"
  }, {
    text: pageName
  }]
}) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        {% if organisation %}
          <span class="govuk-caption-l">{{ organisation.name }}</span>
        {% endif %}
        {{ pageName }}
      </h1>

      {#{ govukButton({
        text: "Export report",
        href: "/reports/" + organisation.id + "/progress-of-applications/download",
        classes: "govuk-button--secondary",
        attributes: {
          download: true
        }
      }) }#}

      {% for row in conversionData %}

        {% if row.code | upper != "AVERAGE" %}

        <h3 class="govuk-heading-m {{- ' govuk-!-margin-top-9' if loop.index > 1 }}">
          <span class="govuk-caption-m">{{ row.provider }}</span>
          {{ row.title }} {{ "(" + row.code + ")" if row.code }}
        </h3>

        <dl class="govuk-summary-list">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key govuk-!-width-one-half">
              <!-- Stage -->
            </dt>
            <dd class="govuk-summary-list__key govuk-!-width-one-quarter">
              Number
            </dd>
            <!-- <dd class="govuk-summary-list__value govuk-!-width-one-quarter">
              Percentage
            </dd> -->
          </div>
          {% for stage in stages %}
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key govuk-!-width-one-half">
              {{ stage.description }}
            </dt>
            <dd class="govuk-summary-list__value govuk-!-width-one-quarter">
              {{ row[stage.code]['number'] | numeral('0') }}
            </dd>
            <!-- <dd class="govuk-summary-list__value govuk-!-width-one-quarter">
              {{ row[stage.code]['percentage'] | numeral('0') + "%" }}
            </dd> -->
          </div>
          {% endfor %}
        </dl>

        {% endif %}

      {% endfor %}

    </div>
  </div>

{% endblock %}

{% block pageScripts %}

{% endblock %}
