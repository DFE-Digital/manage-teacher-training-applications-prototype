{% extends "_layout.njk" %}

{% set primaryNavId = "reports" %}
{% set pageName = "Diversity" %}

{% block beforeContent %}
{{ govukBreadcrumbs({
  items: [{
    href: "/reports",
    text: "Reports"
  }, {
    text: pageName
  }]
}) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        {% if organisation %}
          <span class="govuk-caption-l">{{ organisation.name }}</span>
        {% endif %}
        {{ pageName }}
      </h1>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      <p class="govuk-body">
        <a class="govuk-link" href="/reports/{{organisation.id }}/diversity/download" download>Export data (CSV)</a>
      </p>

      <h2 class="govuk-heading-m">
        Ethnicity
      </h2>

      <table id="ethnicity" class="govuk-table">
        <caption class="govuk-table__caption govuk-table__caption--m govuk-visually-hidden">{{ pageName }}</caption>
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header" aria-sort="ascending">Ethnicity</th>
            <th scope="col" class="govuk-table__header govuk-table__header--numeric" aria-sort="none">Received</th>
            <th scope="col" class="govuk-table__header govuk-table__header--numeric" aria-sort="none">Recruited</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">

          {% for ethnicity in ethnicityData %}

            <tr class="govuk-table__row">
              <th scope="row" class="govuk-table__header" data-sort-value="">
                {{ ethnicity.title }}
              </th>
              <td class="govuk-table__cell govuk-table__cell--numeric" data-sort-value="">
                0
              </td>
              <td class="govuk-table__cell govuk-table__cell--numeric" data-sort-value="">
                0
              </td>
            </tr>

            {% if ethnicity.items %}

              {% for item in ethnicity.items %}

                <tr class="govuk-table__row">
                  <th scope="row" class="govuk-table__cell govuk-!-padding-left-2 govuk-!-font-weight-regular" data-sort-value="">
                    {{ item }}
                  </th>
                  <td class="govuk-table__cell govuk-table__cell--numeric" data-sort-value="">
                    0
                  </td>
                  <td class="govuk-table__cell govuk-table__cell--numeric" data-sort-value="">
                    0
                  </td>
                </tr>

              {% endfor %}

            {% endif %}

          {% endfor %}

        </tbody>
      </table>


      <h2 class="govuk-heading-m">
        Sex
      </h2>

      <table id="ethnicity" class="govuk-table">
        <caption class="govuk-table__caption govuk-table__caption--m govuk-visually-hidden">{{ pageName }}</caption>
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header" aria-sort="ascending">Sex</th>
            <th scope="col" class="govuk-table__header govuk-table__header--numeric" aria-sort="none">Received</th>
            <th scope="col" class="govuk-table__header govuk-table__header--numeric" aria-sort="none">Recruited</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">

          {% for sex in sexData %}

            <tr class="govuk-table__row">
              <th scope="row" class="govuk-table__header" data-sort-value="">
                {{ sex }}
              </th>
              <td class="govuk-table__cell govuk-table__cell--numeric" data-sort-value="">
                0
              </td>
              <td class="govuk-table__cell govuk-table__cell--numeric" data-sort-value="">
                0
              </td>
            </tr>

          {% endfor %}

        </tbody>
      </table>

      <h2 class="govuk-heading-m">
        Age
      </h2>

      <table id="ethnicity" class="govuk-table">
        <caption class="govuk-table__caption govuk-table__caption--m govuk-visually-hidden">{{ pageName }}</caption>
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header" aria-sort="ascending">Age</th>
            <th scope="col" class="govuk-table__header govuk-table__header--numeric" aria-sort="none">Received</th>
            <th scope="col" class="govuk-table__header govuk-table__header--numeric" aria-sort="none">Recruited</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">

          {% for age in ageData %}

            <tr class="govuk-table__row">
              <th scope="row" class="govuk-table__header" data-sort-value="">
                {{ age }}
              </th>
              <td class="govuk-table__cell govuk-table__cell--numeric" data-sort-value="">
                0
              </td>
              <td class="govuk-table__cell govuk-table__cell--numeric" data-sort-value="">
                0
              </td>
            </tr>

          {% endfor %}

        </tbody>
      </table>

    </div>
  </div>

{% endblock %}

{% block pageScripts %}

{% endblock %}
