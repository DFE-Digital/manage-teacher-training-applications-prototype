{% extends "_layout-register.njk" %}

{% set title = "Forgotten your password?"  %}

{% block pageTitle %}
{{ title }} – {{ serviceName }} – GOV.UK
{% endblock %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">
        {{ title }}
      </h1>

      <p class="govuk-body">Enter the email address you have registered for DfE Sign-in.</p>

      <form action="{{ actions.save }}" method="post" novalidate>

        {% call govukFieldset({}) %}

          {{ govukInput({
            id: "email",
            name: "email",
            label: {
              text: "Email address",
              classes: "govuk-label--s"
            },
            classes: "govuk-!-width-two-thirds"
          }) }}

        {% endcall %}

        {{ govukButton({
          text: "Continue"
        }) }}

      </form>

      {% include "./_help.njk" %}

    </div>
  </div>
{% endblock %}
