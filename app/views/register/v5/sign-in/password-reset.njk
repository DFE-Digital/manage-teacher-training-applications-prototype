{% extends "_layout-register.njk" %}

{% set title = "Password has been reset"  %}

{% block pageTitle %}
{{ title }} – {{ serviceName }} – GOV.UK
{% endblock %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukPanel({
        titleText: title
      }) }}

      <p class="govuk-body">Your password has been reset and can now be used to access your DfE Sign-in account.</p>

      {{ govukButton({
        text: "Sign in",
        href: actions.next
      }) }}

    </div>
  </div>
{% endblock %}
