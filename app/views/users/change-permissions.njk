{% extends "_content-wide.njk" %}

{% set primaryNavId = 'users' %}

{% block beforeContent %}
  {{ govukBackLink({
    href: "/users/show"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set h1 %}
        <span class="govuk-caption-xl">Claudine Leoni</span>
        Change permissions for courses run by Somerset SCITT Consortium
      {% endset %}


      <form novalidate method="post">

        {{ govukCheckboxes({
            name: "permissions",
            fieldset: {
              legend: {
                html: h1,
                isPageHeading: true,
                classes: "govuk-fieldset__legend--xl"
              }
            },
            hint: {
              text: "The user will still be able to read all applications made to courses at this organisation."
            },
            items: [
              {
                value: "Manage organisation",
                text: "Manage organisation",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: "<p>Change permissions between organisations</p>"
                },
                checked: true
              },
              {
                value: "Manage users",
                text: "Manage users",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: "<p>Invite or delete users and set their permissions</p>"
                },
                checked: true
              },
              {
                value: "Make decisions",
                html: "Make decisions",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: "<p>Make offers, amend offers and reject applications</p>"
                },
                checked: true
              },
              {
                value: "See safeguarding information",
                text: "Access safeguarding information",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: "<p>View sensitive material about the candidate</p>"
                },
                checked: true
              }
            ]
          }) }}

        {{govukButton({
          text: "Save"
        })}}
      </form>
    </div>
  </div>

{% endblock %}
