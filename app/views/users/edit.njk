{% extends "_layout.njk" %}

{% set primaryNavId = 'users' %}
{% set title = "Harry Potter" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/users/"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{title}}</h1>
      <form novalidate method="post" action="/users">
        {{ govukInput({
          label: {
            text: "Email address",
            classes: "govuk-label--m"
          },
          id: "email-address",
          name: "email-address",
          type: "email",
          autocomplete: "email",
          attributes: {
            spellcheck: "false"
          },
          value: "harry.potter@wizardschool.com"
        }) }}

        {{ govukInput({
          label: {
            text: "First name",
            classes: "govuk-label--m"
          },
          id: "first-name",
          name: "first-name",
          type: "text",
          attributes: {
            spellcheck: "false"
          },
          value: "Harry"
        }) }}

        {{ govukInput({
          label: {
            text: "Last name",
            classes: "govuk-label--m"
          },
          id: "last-name",
          name: "last-name",
          type: "text",
          attributes: {
            spellcheck: "false"
          },
          value: "Potter"
        }) }}


        {% set p1PermissionsHtml %}
          {{ govukCheckboxes({
            idPrefix: "p1",
            name: "permissions",
            fieldset: {
              legend: {
                text: "Choose permissions",
                classes: "govuk-fieldset__legend--s"
              }
            },
            items: [
              {
                value: "Manage users",
                text: "Manage users",
                hint: {
                  text: "Invite and delete users"
                },
                checked: true
              },
              {
                value: "Make decisions",
                text: "Make decisions",
                hint: {
                  text: "Make and change offers"
                },
                checked: true
              }
            ]
          }) }}
        {% endset %}

        {% set p2PermissionsHtml %}
          {{ govukCheckboxes({
            idPrefix: "p2",
            name: "permissions",
            fieldset: {
              legend: {
                text: "Choose permissions",
                classes: "govuk-fieldset__legend--s"
              }
            },
            items: [
              {
                value: "Manage users",
                text: "Manage users",
                hint: {
                  text: "Invite and delete users"
                },
                checked: true
              },
              {
                value: "Make decisions",
                text: "Make decisions",
                hint: {
                  text: "Make and change offers"
                },
                checked: true
              }
            ]
          }) }}
        {% endset %}

        {{ govukCheckboxes({
          idPrefix: "provider",
          name: "provider",
          fieldset: {
            legend: {
              text: "Choose providers",
              classes: "govuk-fieldset__legend--m"
            }
          },
          hint: {
            text: "Select at least one provider"
          },
          items: [
            {
              value: "Somerset SCITT consortium",
              text: "Somerset SCITT consortium",
              conditional: {
                html: p1PermissionsHtml
              },
              checked: true
            },
            {
              value: "The Beach Teaching School",
              text: "The Beach Teaching School",
              conditional: {
                html: p2PermissionsHtml
              },
              checked: true
            }
          ]
        }) }}

        {{govukButton({
          text: "Save"
        })}}
      </form>
    </div>
  </div>

{% endblock %}
