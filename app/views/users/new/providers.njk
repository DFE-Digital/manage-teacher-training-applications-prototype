{% extends "_layout.njk" %}

{% set primaryNavId = 'users' %}
{% block beforeContent %}
  {{ govukBackLink({
    href: "/users/new"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set h1 %}
        <span class="govuk-caption-xl">Invite user</span>
        Select organisation(s) this user will have access to



        {{ govukDetails({
          classes: "govuk-!-margin-bottom-2",
          summaryText: "More about ‘access to organisations’",
          text: "The user will be able to see all applications made to courses at these organisation(s)."
        }) }}
      {% endset %}

      <form novalidate action="/users/new/permissions">
        {{ govukCheckboxes({
          idPrefix: "provider",
          name: "provider",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--xl"
            }
          },
          items: [
            {
              value: "The Millais Alliance",
              text: "The Millais Alliance"
            }
          ]
        }) }}

        {{govukButton({
          text: "Continue"
        })}}
      </form>
    </div>
  </div>

{% endblock %}
