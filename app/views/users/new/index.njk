{% extends "_content-wide.njk" %}

{% set primaryNavId = 'users' %}
{% set title = 'Basic details - Invite user' %}

{% block beforeContent %}
  {{ govukBackLink({
    href: "/users/"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">Invite user</span>
        Basic details
      </h1>

      <form novalidate method="post">
        {{ govukInput({
          label: {
            text: "Email address",
            classes: "govuk-label--m"
          },
          id: "newuser[email-address]",
          name: "newuser[email-address]",
          type: "email",
          autocomplete: "email",
          attributes: {
            spellcheck: "false"
          },
          value: data.newuser['email-address']
        }) }}

        {{ govukInput({
          label: {
            text: "First name",
            classes: "govuk-label--m"
          },
          id: "newuser[first-name]",
          name: "newuser[first-name]",
          type: "text",
          attributes: {
            spellcheck: "false"
          },
          value: data.newuser['first-name']
        }) }}

        {{ govukInput({
          label: {
            text: "Last name",
            classes: "govuk-label--m"
          },
          id: "newuser[last-name]",
          name: "newuser[last-name]",
          type: "text",
          attributes: {
            spellcheck: "false"
          },
          value: data.newuser['last-name']
        }) }}

         {{ govukWarningText({
        text: "Anyone you invite to your organisation will be able to view all applications to courses you look after. They'll be able to make decisions about applications and view sensitive information, if you give them permission.",
        iconFallbackText: "Fallback text"
      }) }}

        {{govukButton({
          text: "Continue"
        })}}
      </form>
    </div>
  </div>

{% endblock %}
