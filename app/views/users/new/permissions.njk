{% extends "_content-wide.njk" %}

{% set primaryNavId = 'users' %}

{% block beforeContent %}
  {{ govukBackLink({
    href: "/users/new/providers"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set h1 %}
        <span class="govuk-caption-xl">Invite user</span>
        Set up permissions for this user
      {% endset %}

      <form novalidate method="get" action="/users/new/check">

        {% set makeDecisionsHintHtml %}
          <p class="govuk-!-margin-bottom-1">The user can make decisions on courses ratified by:</p>
          <ul class="govuk-list">
            <li>{{ appIcon({
                classes: "govuk-!-margin-right-1",
                icon: "tick",
                hidden: true
              }) }} University of Brighton
            </li>
            <li>{{ appIcon({
                classes: "govuk-!-margin-right-1",
                icon: "tick",
                hidden: true
              }) }} University of Sussex
            </li>
            <li>{{ appIcon({
                classes: "govuk-!-margin-right-1",
                icon: "tick",
                hidden: true
              }) }} University of Chichester
            </li>
          </ul>
        {% endset %}


        {{ govukCheckboxes({
            name: "permissions",
            fieldset: {
              legend: {
                html: h1,
                isPageHeading: true,
                classes: "govuk-fieldset__legend--xl"
              }
            },
            items: [
              {
                value: "Manage organisation",
                text: "Organisational permissions",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  text: "The user can amend permissions between organisations (for example, access to decision-making or sensitive information)"
                }
              },
              {
                value: "Manage users",
                text: "User permissions",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  text: "The user can invite or delete other users, and set their permissions"
                }
              },
              {
                value: "Make decisions",
                html: "Decision-making permissions",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: makeDecisionsHintHtml
                }
              },
              {
                value: "See safeguarding information",
                text: "Safeguarding information permissions:",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: makeDecisionsHintHtml
                }
              }
            ]
          }) }}

        {{govukButton({
          text: "Continue"
        })}}
      </form>
    </div>
  </div>

{% endblock %}
