{% extends "_content-wide.njk" %}

{% set primaryNavId = 'users' %}

{% block beforeContent %}
  {{ govukBackLink({
    href: "/users/new/providers"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set h1 %}
        <span class="govuk-caption-xl">Invite user</span>
        {# Select permissions: {{ data.user.organisations[0].name }} #}
        Select permissions
      {% endset %}

      {% set makeDecisionsHintHtml %}
        <p class="govuk-!-margin-bottom-1">Make offers, amend offers and reject applications</p>
        {# <p class="govuk-!-margin-bottom-1">Applies to courses run by:</p>
        <ul class="govuk-list">
          <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[1].name }}
          </li>
          <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[2].name }}
          </li>
          <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[3].name }}
            <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[0].name }}
          </li>
        </ul> #}
      {% endset %}

      {% set safeguardingInformationHintHtml %}
        <p class="govuk-!-margin-bottom-1">View sensitive material about the candidate</p>
        {# <p class="govuk-!-margin-bottom-1">Applies to courses run by:</p>
        <ul class="govuk-list">
          <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[1].name }}
          </li>
          <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[2].name }}
          </li>
          <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[3].name }}
            <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[0].name }}
          </li>
        </ul> #}
      {% endset %}

      {% set diversityInformationHintHtml %}
        <p class="govuk-!-margin-bottom-1">View diversity information about the candidate</p>
        {# <p class="govuk-!-margin-bottom-1">Applies to courses run by:</p>
        <ul class="govuk-list">
          <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[1].name }}
          </li>
          <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[2].name }}
          </li>
          <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[3].name }}
            <li>{{ appIcon({
              classes: "govuk-!-margin-right-1",
              icon: "tick",
              hidden: true
            }) }} {{ data.organisations[0].name }}
          </li>
        </ul> #}
      {% endset %}


      {# <form novalidate method="get" action="/users/new/permissions2"> #}
      <form novalidate method="get" action="/users/new/check">

        {{ govukCheckboxes({
            name: "permissions",
            fieldset: {
              legend: {
                html: h1,
                isPageHeading: true,
                classes: "govuk-fieldset__legend--xl"
              }
            },
            hint: {
              text: "The user will be able to view all applications this organisation is involved with. You don't need to set permissions for this."
            },
            items: [
              {
                value: "Manage organisation",
                text: "Manage organisation",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: "<p>Change permissions between organisations</p>"
                }
              },
              {
                value: "Manage users",
                text: "Manage users",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: "<p>Invite or delete users and set their permissions</p>"
                }
              },
              {
                value: "Make decisions",
                html: "Make decisions",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: makeDecisionsHintHtml
                }
              },
              {
                value: "See safeguarding information",
                text: "Access safeguarding information",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: safeguardingInformationHintHtml
                }
              },
              {
                value: "Access diversity information",
                text: "Access diversity information",
                label: {
                  classes: "govuk-label--s"
                },
                hint: {
                  html: diversityInformationHintHtml
                }
              }
            ]
          }) }}

        {{govukButton({
          text: "Continue"
        })}}
      </form>
    </div>
  </div>

{% endblock %}
