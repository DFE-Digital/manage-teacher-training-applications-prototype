{% extends "_layout.njk" %}

{% set primaryNavId = 'users' %}
{% set firstName = data.user.givenName %}
{% set lastName = data.user.familyName %}
{% set name = firstName + " " + lastName %}
{% set title = "Are you sure you want to delete this user’s account?" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/users/show"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-xl">{{name}}</span>
      <h1 class="govuk-heading-xl">{{title}}</h1>

      <form novalidate method="post">
        {{ govukButton({
          text: "Yes I’m sure - delete this account",
          classes: "govuk-button--warning"
        }) }}
      </form>
    </div>
  </div>

{% endblock %}
