{% extends "_layout.njk" %}

{% set primaryNavId = 'users' %}
{% set title = "Harry Potter" %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Users",
      href: "/"
    }, {
      text: title
    }]
  }) if not data.bare }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{title}}</h1>

      {% set permissionsHtml %}
        <h3 class="govuk-heading-s">Somerset SCITT consortium</h3>
        <ul class="govuk-list govuk-list--bullet">
          <li>Manage users</li>
          <li>Make decisions</li>
        </ul>
        <h3 class="govuk-heading-s">The Beach Teaching School</h3>
        <ul class="govuk-list govuk-list--bullet">
          <li>Manage users</li>
        </ul>
      {% endset %}

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "Name"
            },
            value: {
              text: "Harry Potter"
            },
            actions: {
              items: [
                {
                  href: "/users/change-name",
                  text: "Change",
                  visuallyHiddenText: "name"
                }
              ]
            }
          },
          {
            key: {
              text: "Email address"
            },
            value: {
              text: "5 January 1978"
            },
            actions: {
              items: [
                {
                  href: "#",
                  text: "Change",
                  visuallyHiddenText: "email address"
                }
              ]
            }
          },
          {
            key: {
              text: "Permissions"
            },
            value: {
              html: permissionsHtml
            },
            actions: {
              items: [
                {
                  href: "#",
                  text: "Change",
                  visuallyHiddenText: "permissions"
                }
              ]
            }
          }
        ]
      }) }}

      {{ govukButton({
        text: "Delete user",
        classes: "govuk-button--warning"
      }) }}
    </div>
  </div>

{% endblock %}
