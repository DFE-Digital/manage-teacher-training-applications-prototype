{% extends "_layout.njk" %}

{% set primaryNavId = 'users' %}
{% set title = "Harry Potter" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/users/show"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set h1 %}
        <span class="govuk-caption-xl">Harry Potter</span>
        Change the organisations this user will have access to
      {% endset %}

      <form novalidate method="post">
        {{ govukCheckboxes({
          idPrefix: "provider",
          name: "provider",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--xl"
            }
          },

          items: [
            {
              value: "Somerset SCITT Consortium",
              text: "Somerset SCITT Consortium"
            },
            {
              value: "Ventrus Teaching School Alliance",
              text: "Ventrus Teaching School Alliance"
            }
          ]
        }) }}
        {{ govukButton({
          text: "Save"
        }) }}
      </form>
    </div>
  </div>

{% endblock %}
