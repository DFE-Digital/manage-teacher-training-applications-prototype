{% extends "_content-wide.njk" %}

{% set primaryNavId = 'users' %}

{% set title = 'User permissions - Invite user' %}

{% set backLinkUrl %}/organisation-settings/{{org.id}}/users/new{% endset %}
{% set cancelLinkUrl %}/organisation-settings/{{org.id}}/users{% endset %}

{% block beforeContent %}
  {{ govukBackLink({
    href: backLinkUrl
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set runOrRatified %}
        {% if org.isAccreditedBody %}
          run
        {% else %}
          ratified
        {% endif %}
      {% endset %}

      {% set makeDecisionsHint %}
        {{appPermissions({
          runOrRatified: runOrRatified,
          applicableOrgs: permissions.applicableOrgs.makeDecisions,
          nonApplicableOrgs: permissions.nonApplicableOrgs.makeDecisions
        })}}
      {% endset %}

      {% set safeguardingHint %}
        {{appPermissions({
          runOrRatified: runOrRatified,
          applicableOrgs: permissions.applicableOrgs.viewSafeguardingInformation,
          nonApplicableOrgs: permissions.nonApplicableOrgs.viewSafeguardingInformation
        })}}
      {% endset %}

      {% set diversityHint %}
        {{appPermissions({
          runOrRatified: runOrRatified,
          applicableOrgs: permissions.applicableOrgs.viewDiversityInformation,
          nonApplicableOrgs: permissions.nonApplicableOrgs.viewDiversityInformation
        })}}
      {% endset %}

      {% set h1 %}
        <span class="govuk-caption-l">
          Invite user
          {% if data.user.organisations.length > 1 %}
            - {{org.name}}
          {% endif %}
        </span>
        User permissions
      {% endset %}

      <form novalidate method="post">

          {{ govukCheckboxes({
            fieldset: {
              legend: {
                html: h1,
                isPageHeading: true,
                classes: "govuk-fieldset__legend--l"
              }

            },
            hint: {
                text: "All users can view applications."
              },
            items: [
              {
                value: "manageUsers",
                text: "Manage users"
              },
              {
                value: "manageOrganisation",
                text: "Manage organisational permissions"
              },
              {
                value: "setupInterviews",
                html: "Manage interviews"
              },
              {
                value: "makeDecisions",
                html: "Make offers and reject applications",
                hint: {
                  html: makeDecisionsHint
                }
              },
              {
                value: "viewSafeguardingInformation",
                text: "View criminal convictions and professional misconduct",
                hint: {
                  html: safeguardingHint
                }
              },
              {
                value: "viewDiversityInformation",
                text: "View sex, disability and ethnicity information",
                hint: {
                  html: diversityHint
                }
              }
            ]
          } | decorateAttributes(data, 'data.newuser.permissions')) }}


        {{govukButton({
          text: "Continue"
        })}}
      </form>
      <p class="govuk-body"><a href="{{cancelLinkUrl}}">Cancel</a></p>
    </div>
  </div>

{% endblock %}
