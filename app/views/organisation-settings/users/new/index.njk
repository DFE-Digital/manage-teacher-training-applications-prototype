{% extends "_content-wide.njk" %}

{% set primaryNavId = 'users' %}
{% set title = 'Personal details - Invite user' %}

{% set backLinkUrl %}/organisation-settings/{{org.id}}/users/{% endset %}

{% block beforeContent %}
  {{ govukBackLink({
    href: backLinkUrl
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">Invite user</span>
        Personal details
      </h1>

      <form novalidate method="post">

      {{ govukInput({
          label: {
            text: "First name",
            classes: "govuk-label--m"
          },
          id: "newuser[first-name]",
          name: "newuser[first-name]",
          type: "text",
          attributes: {
            spellcheck: "false"
          },
          value: data.newuser['first-name']
        }) }}

        {{ govukInput({
          label: {
            text: "Last name",
            classes: "govuk-label--m"
          },
          id: "newuser[last-name]",
          name: "newuser[last-name]",
          type: "text",
          attributes: {
            spellcheck: "false"
          },
          value: data.newuser['last-name']
        }) }}

        {{ govukInput({
          label: {
            text: "Email address",
            classes: "govuk-label--m"
          },
          id: "newuser[email-address]",
          name: "newuser[email-address]",
          type: "email",
          autocomplete: "email",
          attributes: {
            spellcheck: "false"
          },
          value: data.newuser['email-address']
        }) }}

        {{govukButton({
          text: "Continue"
        })}}
      </form>
      <p class="govuk-body"><a href="{{backLinkUrl}}">Cancel</a></p>
    </div>
  </div>

{% endblock %}
