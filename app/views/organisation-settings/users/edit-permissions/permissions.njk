{% extends "_content-wide.njk" %}

{% set primaryNavId = 'users' %}

{% set title = 'User permissions - Invite user' %}

{% set backLinkUrl %}/organisation-settings/{{org.id}}/users/{% endset %}
{% set cancelLinkUrl %}/organisation-settings/{{org.id}}/users/{% endset %}

{% block beforeContent %}
  {{ govukBackLink({
    href: backLinkUrl
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% set runOrRatified %}
        {% if org.isAccreditedBody %}
          run
        {% else %}
          ratified
        {% endif %}
      {% endset %}

      {% set makeDecisionsHint %}
        {{appPermissions({
          runOrRatified: runOrRatified,
          applicableOrgs: orgPermissions.applicableOrgs.makeDecisions,
          nonApplicableOrgs: orgPermissions.nonApplicableOrgs.makeDecisions
        })}}
      {% endset %}

      {% set safeguardingHint %}
        {{appPermissions({
          runOrRatified: runOrRatified,
          applicableOrgs: orgPermissions.applicableOrgs.viewSafeguardingInformation,
          nonApplicableOrgs: orgPermissions.nonApplicableOrgs.viewSafeguardingInformation
        })}}
      {% endset %}

      {% set diversityHint %}
        {{appPermissions({
          runOrRatified: runOrRatified,
          applicableOrgs: orgPermissions.applicableOrgs.viewDiversityInformation,
          nonApplicableOrgs: orgPermissions.nonApplicableOrgs.viewDiversityInformation
        })}}
      {% endset %}

      <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">
          {{user.firstName}} {{user.lastName}}
          {% if data.user.organisations.length > 1 %}
            - {{org.name}}
          {% endif %}
        </span>
        User permissions
      </h1>

      {% include "_includes/users/organisational-permissions-content.njk" %}

      <form novalidate method="post">
        {{ govukCheckboxes({
          fieldset: {
            legend: {
              html: "Choose user permssions",
              isPageHeading: false,
              classes: "govuk-fieldset__legend--m"
            }
          },
          hint: {
            text: "All users can view applications."
          },
          items: [
            {
              value: "manageUsers",
              text: "Manage users"
            },
            {
              value: "manageOrganisation",
              text: "Manage organisational permissions"
            },
            {
              value: "makeDecisions",
              html: "Make offers and reject applications"
            },
            {
              value: "setupInterviews",
              html: "Manage interviews"
            },
            {
              value: "viewSafeguardingInformation",
              text: "View criminal convictions and professional misconduct"
            },
            {
              value: "viewDiversityInformation",
              text: "View sex, disability and ethnicity information"
            }
          ]
        } | decorateAttributes(data, 'data.editpermissions.permissions')) }}

        {{govukButton({
          text: "Continue"
        })}}
      </form>
      <p class="govuk-body"><a href="{{cancelLinkUrl}}">Cancel</a></p>
    </div>
  </div>

{% endblock %}
