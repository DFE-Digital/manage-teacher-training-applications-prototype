{% extends "_layout-service-unavailable.njk" %}

{% set title = "Sorry, there’s a problem with the service" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        {{ title }}
      </h1>
      <p class="govuk-body">
        Try again later.
      </p>
      <p class="govuk-body">
        If you reached this page after submitting information then it has not been saved. You’ll need to enter it again when the service is available.
      </p>
      <p class="govuk-body">
        If you have any questions, email <a class="govuk-link" href="mailto:mailto:becomingateacher@digital.education.gov.uk">becomingateacher@digital.education.gov.uk</a>.
      </p>
    </div>
  </div>
{% endblock %}
