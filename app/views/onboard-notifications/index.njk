{% extends "_layout.njk" %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <div class="app-callout-card app-inverte app-inverte--card">

        <h1 class="govuk-heading-l app-heading-l--inverte">You can now customise notifications</h1>

        <p class="govuk-body">There are 2 types of notifications:<p>

        <ul class="govuk-list govuk-list--bullet">
          <li>email notifications</li>
          <li>in-service notifications</li>
        </ul>

        <p>Email notifications are sent to the same email address you use to sign into this service.</p>
        <p>In service notifications are shown on the ‘Notifications’ menu item in the header.</p>

        <p>You can configure which notifications from your account settings page.</p>

        {{govukButton({
          text: "Change your notifications",
          href: "/account/notification-settings"
        })}}

        <p>Or</p>
        <p class="govuk-!-margin-bottom-2"><a href="#">Continue to applications</a></p>
      </div>

    </div>
  </div>
{% endblock %}
