{% from "govuk/components/inset-text/macro.njk"       import govukInsetText %}
{% if params.interview %}
  {% set panelHtml %}
    <p class="govuk-!-margin-bottom-1 govuk-!-font-weight-bold">{{params.interview.date | govukDateAtTime }}</p>
    <p class="govuk-!-margin-bottom-1">{{params.application.course}} at {{params.application.location}}</p>
    <p class="govuk-caption-m govuk-!-margin-bottom-1">{{ params.application.provider }} – ratified by {{params.application.accreditedBody}}</p>
    <p class="govuk-!-margin-bottom-0"><a href="/application/{{params.id}}/interviews">View interview</a></p>
  {% endset %}
{% elseif params.application %}
  {% set panelHtml %}
    <p class="govuk-!-margin-bottom-1">{{params.application.course}} at {{params.application.location}}</p>
    <p class="govuk-caption-m govuk-!-margin-bottom-1">{{ params.application.provider }} – ratified by {{params.application.accreditedBody}}</p>

    {% if params.application.rejectedReasons %}
      <p class="govuk-!-margin-bottom-0"><a href="/application/{{params.id}}">View feedback</a></p>
    {% else %}
      <p class="govuk-!-margin-bottom-0"><a href="/application/{{params.id}}">View application</a></p>
    {% endif %}
  {% endset %}
{% elseif params.offer %}
  {% set panelHtml %}
    <p class="govuk-!-margin-bottom-1">{{params.offer.course}} at {{params.offer.location}}</p>
    <p class="govuk-caption-m govuk-!-margin-bottom-1">{{ params.offer.provider }} – ratified by {{params.offer.accreditedBody}}</p>
    <p class="govuk-!-margin-bottom-0"><a href="/application/{{params.id}}/offer">View offer</a></p>
  {% endset %}
{% elseif params.note %}
  {% set panelHtml %}
    <p class="govuk-!-margin-bottom-1 govuk-!-font-weight-bol">{{params.note.subject}}</p>
    <p class="govuk-caption-m govuk-!-margin-bottom-1">{{params.note.body}}</p>
    <p class="govuk-!-margin-bottom-0"><a href="/application/{{params.id}}/notes">View note</a>
  {% endset %}
{% endif %}

<div class="govuk-!-margin-top-4">
  {{panelHtml | safe }}
</div>

