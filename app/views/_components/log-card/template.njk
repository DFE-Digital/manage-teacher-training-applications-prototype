<div class="app-log-card {{params.classes}}">
  <h2 class="govuk-heading-s govuk-!-padding-top-0 govuk-!-margin-bottom-3"> {{params.title}}
  <span class="govuk-!-font-weight-regular"> on {{params.dateText | date("d LLL yyyy")}} at {{params.dateText | time }}</span>
  </h2>

  {% if params.application %}
    <div class="app-log-card__note">
      <p class="govuk-!-font-size-16 govuk-!-margin-bottom-0">{{params.application.provider}}</p>
      <p class="govuk-!-font-size-16 govuk-!-margin-bottom-0 govuk-!-font-weight-bold">{{params.application.course}} at {{params.application.location}}</p>
      <p class="govuk-!-font-size-14 govuk-!-margin-bottom-1">Ratified by {{params.application.accreditedBody}}</p>
      <p class="govuk-!-font-size-16 govuk-!-margin-bottom-0"><a href="{{params.link.href}}">View application</a>
    </div>
  {% endif %}

  {% if params.offer %}
    <div class="app-log-card__note">
      <p class="govuk-!-font-size-16 govuk-!-margin-bottom-0">{{params.offer.provider}}</p>
      <p class="govuk-!-font-size-16 govuk-!-margin-bottom-0 govuk-!-font-weight-bold">{{params.offer.course}} at {{params.offer.location}}</p>
      <p class="govuk-!-font-size-14 govuk-!-margin-bottom-1">Ratified by {{params.offer.accreditedBody}}</p>
      <p class="govuk-!-font-size-16 govuk-!-margin-bottom-0"><a href="{{params.link.href}}">View offer</a>
    </div>
  {% endif %}

  {% if params.note %}
    <div class="app-log-card__note">
      <p class="govuk-!-font-size-16 govuk-!-margin-bottom-1 govuk-!-font-weight-bold">{{params.note.subject}}</p>
      <p class="govuk-!-font-size-16 govuk-!-margin-bottom-1">{{params.note.body}}</p>
      <p class="govuk-!-font-size-16 govuk-!-margin-bottom-0"><a href="{{params.link.href}}">View note</a>
    </div>
  {% endif %}

  {% if params.course %}
    <p class="govuk-!-font-size-16 govuk-!-margin-bottom-0">{{params.course.provider}}</p>
    <p class="govuk-!-margin-bottom-0">{{params.course.subject}} at {{params.course.location}}</p>
    <p class="govuk-caption-m govuk-!-font-size-16 govuk-!-margin-bottom-3">Ratified by {{params.course.accreditedbody}}</p>
  {% endif %}

  {# {% if params.link %}
    <p class="govuk-!-font-size-16 govuk-!-margin-bottom-0"><a href="{{params.link.href}}">{{params.link.text}}</a>
  {% endif %} #}
</div>
