{%- from "govuk/components/inset-text/macro.njk" import govukInsetText -%}
<div class="app-log-card {{- ' ' + params.classes if params.classes }}">

  {%- if params.application %}
    <div class="app-log-card__note">
      <p class="app-log-card__note--course">{{ params.application.course }} at {{ params.application.location }}</p>
      <p class="app-log-card__note--provider">{{ params.application.provider }}</p>
      <p class="app-log-card__note--ratified">Ratified by {{ params.application.accreditedBody }}</p>

      {%- if params.application.rejectedReasons %}
        {%- set rejectedReasons = params.application.rejectedReasons -%}
        {% include "_includes/candidate-feedback.njk" %}
      {% endif -%}

      <p class="app-log-card__note--link">
        <a class="govuk-link" href="/application/{{ params.id }}">View application</a>
      </p>
    </div>
  {% endif -%}

  {%- if params.offer %}
    <div class="app-log-card__note">
      <p class="app-log-card__note--course">{{ params.offer.course }} at {{ params.offer.location }}</p>
      <p class="app-log-card__note--provider">{{ params.offer.provider }}</p>
      <p class="app-log-card__note--ratified">Ratified by {{ params.offer.accreditedBody }}</p>
      <p class="app-log-card__note--link">
        <a class="govuk-link" href="/application/{{ params.id }}/offer">View offer</a>
      </p>
    </div>
  {% endif -%}

  {%- if params.note %}
    <div class="app-log-card__note">
      <p class="app-log-card__note--subject">{{ params.note.subject }}</p>
      <p class="app-log-card__note--content">{{ params.note.body }}</p>
      <p class="app-log-card__note--link">
        <a class="govuk-link" href="/application/{{ params.id }}/notes">View note</a>
      </p>
    </div>
  {% endif -%}

</div>
