{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}
{% set name = application.personalDetails.name %}
{% set title = "Make a decision" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + application.id
  }) }}
{% endblock %}

{% block content %}

  {% set h1 %}
    <span class="govuk-caption-l">{{name}}</span>
    {{title}}
  {% endset %}

  <form action="{{ formaction | default('') }}" method="post">
    {{ govukRadios({
      fieldset: {
        legend: {
          html: h1,
          classes: "govuk-fieldset__legend--l",
          isPageHeading: true
        }
      },
      idPrefix: "status",
      name: "decision",
      items: [{
        value: "offer",
        text: "Make an offer",
        checked: checked(data.decision, "offer")
      },
      {
        value: "reject",
        text: "Reject application",
        checked: checked(data.decision, "reject")
      }]
    }) }}

    {{ govukButton({
      text: "Continue"
    }) }}
  </form>
  <p class="govuk-body"><a href="/application/{{ application.id }}">Cancel</a></p>
{% endblock %}
