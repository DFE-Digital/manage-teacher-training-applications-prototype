{% extends "_content-wide.njk" %}

{% set primaryNavId = 'applications' %}
{% set application = data.applications[applicationId] %}
{% set subNavId = "notes" %}
{% set status = application.status %}
{% set name = [application["personal-details"]["given-name"], application["personal-details"]["family-name"]] | join(" ") %}
{% set title = name %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + application.id + "/notes"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <div class="app-inverted app-inverted--card">

        <h1 class="govuk-heading-l app-heading-l--inverted">Using notes</h1>

        <p class="govuk-body app-body--inverted">
          When you add a note to an application, it will be visible to you and colleagues with access to applications for this course.<p>
            <p class="govuk-body app-body--inverted">
              The note will not be visible to the candidate or the Department for Education (DfE).<p>


        <form method="post">


          {{ govukCheckboxes({
            idPrefix: "hide-tip",
            name: "hide-tip",
            classes: "app-inverted-checkbox",
            fieldset: {
              legend: {
                text: "Do you want to hide this tip again in future?",
                classes: "govuk-visually-hidden"
              }
            },
            items: [
              {
                value: "Do not show this tip again",
                text: "Do not show this information again"
              }
            ]
          }) }}

          <p class="govuk-body app-body--inverted">You can turn this guidance on again in account settings.</p>


          {{govukButton({
            text: "Continue",
            classes: "app-button--inverted govuk-!-margin-bottom-0"
          })}}
        </form>
      </div>

    </div>
  </div>
{% endblock %}
