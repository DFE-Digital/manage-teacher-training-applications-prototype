{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}
{% set name = application.personalDetails.name %}
{% set title = "Check and confirm offer" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: '/application/' + application.id + '/offer/new'
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">{{name}}</span>
      <h1 class="govuk-heading-l">{{title}}</h1>

      {{appOfferPanel({
        provider: {
          value: application.provider,
          href: "/application/" + application.id + "/offer/new/provider"
        },
        course: {
          value: application.course,
          href: "/application/" + application.id + "/offer/new/course"
        },
        location: {
          value: data['new-offer']['location'],
          href: "/application/" + application.id + "/offer/new/location?referrer=/application/" + application.id + "/offer/new/"
        },
        studyMode: {
          value: "Full time",
          href: "/application/" + application.id + "/offer/new/study-mode"
        },
        conditions: {
          items: conditions
        },
        changeConditions: {
          href: "/application/" + application.id + "/offer/new"
        }
      })}}

      {{ govukWarningText({
        text: "By making this offer, you guarantee a place on this course as long as the candidate meets the conditions. Weâ€™ll email the candidate with the details of this offer."
      }) }}

      <form method="post">
        {{ govukButton({
          text: "Confirm offer"
        }) }}
      </form>
      <p class="govuk-body"><a href="/application/{{ application.id }}">Cancel</a></p>
    </div>
  </div>
{% endblock %}
