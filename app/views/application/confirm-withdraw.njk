{% extends "_layout.njk" %}

{% set application = data.applications[applicationId] %}
{% set name = [application["personal-details"]["given-name"], application["personal-details"]["family-name"]] | join(" ") %}

{% set title = "Are you sure you want to withdraw this offer?" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + application.id + '/withdraw'
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">{{title}}</h1>

      {% if data.comments %}
        <h2 class="govuk-heading-m">Offer details</h2>
      {% endif %}

      {% include "_includes/application-summary.njk" %}

      {% if data.comments %}
        <h2 class="govuk-heading-m">Reasons for withdrawal</h2>

        {{ govukSummaryList({
          rows: [{
            key: {
              text: "Reasons for withdrawal"
            },
            value: {
              text: data.comments
            }
          }]
        })}}
      {% endif %}

      <form method="post">
        {{ govukButton({
          text: "Yes I'm sure - withdraw offer",
          classes: "govuk-button--warning"
        }) }}
      </form>
      <p class="govuk-body"><a href="/application/{{ application.id }}">Cancel</a></p>
    </div>
  </div>

{% endblock %}
