{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}
{% set subNavId = "interviews" %}
{% set status = application.status %}
{% set name = application.personalDetails.name %}
{% set title = "Set up an interview" %}

{% block beforeContent %}
  {{ govukBackLink({
    href: "/application/" + application.id + "/interviews/new"
  }) }}
{% endblock %}

{% block content %}

  <span class="govuk-caption-l"> {{name}} </span>
  <h1 class="govuk-heading-l">Check and confirm interview</h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "Date"
            },
            value: {
              text: [data.interview.date.day, data.interview.date.month, data.interview.date.year] | govukDate
            },
            actions: {
              items: [
                {
                  href: "/application/" + application.id + "/interviews/new",
                  text: "Change",
                  visuallyHiddenText: "name"
                }
              ]
            }
          },
          {
            key: {
              text: "Time"
            },
            value: {
              text: data.interview.time
            },
            actions: {
              items: [
                {
                  href: "/application/" + application.id + "/interviews/new",
                  text: "Change",
                  visuallyHiddenText: "date of birth"
                }
              ]
            }
          },
          {
            key: {
              text: "Organisation"
            },
            value: {
              html: data.interview.organisation
            },
            actions: {
              items: [
                {
                  href: "/application/" + application.id + "/interviews/new",
                  text: "Change",
                  visuallyHiddenText: "contact information"
                }
              ]
            }
          },
          {
            key: {
              text: "Location"
            },
            value: {
              html: data.interview.location
            },
            actions: {
              items: [
                {
                  href: "/application/" + application.id + "/interviews/new",
                  text: "Change",
                  visuallyHiddenText: "contact information"
                }
              ]
            }
          },
          {
            key: {
              text: "Additional details"
            },
            value: {
              html: data.interview.details
            },
            actions: {
              items: [
                {
                  href: "/application/" + application.id + "/interviews/new",
                  text: "Change",
                  visuallyHiddenText: "contact information"
                }
              ]
            }
          }
        ]
      }) }}

      {{ govukWarningText({
        text: "Weâ€™ll send an email to the candidate confirming the details of the interview.",
        iconFallbackText: "Fallback text"
      }) }}

      <form method="post">
        {{ govukButton({
          text: "Confirm interview"
        }) }}
      </form>

    </div>
  </div>
{% endblock %}
