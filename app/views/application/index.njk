{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}
{% set application = data.applications[applicationId] %}
{% set status = application.status %}
{% set name = [application["personal-details"]["given-name"], application["personal-details"]["family-name"]] | join(" ") %}
{% set title = name %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Applications",
      href: "/"
    }, {
      text: title
    }]
  }) if not data.bare }}
{% endblock %}

{% block content %}
  {{ appBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flash+"</h2>",
    type: "success",
    icon: false
  }) if flash }}

  {% set rbd = application.submittedDate | addDays(40) %}
  {% set remaining = rbd | daysFromNow(rbd) %}

  {% if application.status == 'New' %}
    {% set bannerHtml %}
      <h2 class="govuk-heading-m govuk-!-margin-bottom-0">You have 22 days to send a response. <a class="govuk-link--no-visited-state" href="/application/{{application.id}}/decision">Respond to application</a>.</h2>
    {% endset %}
    {{ appBanner({
      html: bannerHtml,
      type: "information",
      icon: false
    }) }}
  {% endif %}



  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {# <span class="govuk-caption-xl">{{ application.id }}</span> #}
      <h1 class="govuk-heading-xl">
        {{ title }} {{ govukTag({ classes: status | statusClass, text: status })}}
      </h1>
    </div>
    <div class="govuk-grid-column-one-third">
      <p class="app-print-button"><a href="javascript:window.print();">Print page</a></p>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if (application.status != 'Rejected')  and (application.status != 'Application withdrawn') and (application.status != 'New')%}
        {% include "_includes/application/status-panel.njk" %}
      {% endif %}

      {% if application.rejectedReasons %}
        <h2 class="govuk-heading-l">Reasons for rejection</h2>
        {% set candidateActionReasonsHtml %}
        {% set fieldName = "candidate-actions-reasons" %}
        {% set checkboxValue = "Didn’t reply to our interview offer" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}</p>
        {% endif %}

        {% set checkboxValue = "Didn’t attend interview" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}</p>
        {% endif %}

        {% set checkboxValue = "Other" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}: {{application.rejectedReasons['candidate-actions-reasons-other']}}</p>
        {% endif %}
      {% endset %}

      {% set missingQualificationsReasonsHtml %}
        {% set fieldName = "missing-qualifications-reasons" %}
        {% set checkboxValue = "No Maths GCSE grade 4 (C) or above, or valid equivalent" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}</p>
        {% endif %}

        {% set checkboxValue = "No English GCSE grade 4 (C) or above, or valid equivalent" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}</p>
        {% endif %}

        {% set checkboxValue = "No Science GCSE grade 4 (C) or above, or valid equivalent (for primary applicants)" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}</p>
        {% endif %}

        {% set checkboxValue = "No degree" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}</p>
        {% endif %}

        {% set checkboxValue = "Degree doesn’t meet course requirements" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}</p>
        {% endif %}

        {% set checkboxValue = "Other" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}: {{application.rejectedReasons['candidate-actions-reasons-other']}}</p>
        {% endif %}
      {% endset %}

      {% set applicationQualityReasonsHtml %}
        {% set fieldName = "application-quality-reasons" %}
        {% set checkboxValue = "Personal statement" %}
        {% set textBoxName = "application-quality-reasons-personal-statement" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}

        {% set checkboxValue = "Subject knowledge" %}
        {% set textBoxName = "application-quality-reasons-subject-knowledge" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}

        {% set checkboxValue = "Other" %}
        {% set textBoxName = "application-quality-reasons-other" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}
      {% endset %}

      {% set safeguardingReasonsHtml %}
        {% set fieldName = "safeguarding-reasons" %}
        {% set checkboxValue = "Information given on application form false or inaccurate" %}
        {% set textBoxName = "safeguarding-reasons-false-information" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}

        {% set checkboxValue = "Evidence of plagiarism in personal statement or elsewhere" %}
        {% set textBoxName = "safeguarding-reasons-plagiarism" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}

        {% set checkboxValue = "References unsatisfactory" %}
        {% set textBoxName = "safeguarding-reasons-references" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}

        {% set checkboxValue = "Information disclosed by candidate makes them unsuitable to work with children" %}
        {% set textBoxName = "safeguarding-reasons-disclosed-information" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}

        {% set checkboxValue = "Information revealed by our vetting process makes the candidate unsuitable to work with children" %}
        {% set textBoxName = "safeguarding-reasons-vetting-information" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}

        {% set checkboxValue = "Other" %}
        {% set textBoxName = "safeguarding-reasons-other" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>{{checkboxValue}}: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}
      {% endset %}

      {% set anotherIssueHtml %}
        {% set fieldName = "another-issue" %}
        <p>{{application.rejectedReasons[fieldName]}}</p>

        {% set checkboxValue = "Yes" %}
        {% set textBoxName = "another-issue-details" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>Other details: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}
      {% endset %}

      {% set otherFeedbackHtml %}
        {% set fieldName = "other-feedback" %}
        <p>{{application.rejectedReasons[fieldName]}}</p>

        {% set checkboxValue = "Yes" %}
        {% set textBoxName = "other-feedback-details" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>Other details: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}
      {% endset %}

      {% set futureApplicationsHtml %}
        {% set fieldName = "future-applications" %}
        <p>{{application.rejectedReasons[fieldName]}}</p>

        {% set checkboxValue = "Yes" %}
        {% set textBoxName = "future-applications-details" %}
        {% if application.rejectedReasons[fieldName] and application.rejectedReasons[fieldName].indexOf(checkboxValue) > -1 %}
          <p>Other details: {{application.rejectedReasons[textBoxName]}}</p>
        {% endif %}
      {% endset %}



      {{ govukSummaryList({
        rows: [{
          key: {
            text: "Date of rejection"
          },
          value: {
            html: application.rejectedDate | date("dd LLL yyyy")
          }
        },{
          key: {
            text: "Was it due to candidate behaviour?"
          },
          value: {
            html: application.rejectedReasons['candidate-actions']
          }
        }, {
          key: {
            text: "What did the candidate do?"
          },
          value: {
            html: candidateActionReasonsHtml
          }
        } if application.rejectedReasons['candidate-actions'] == "Yes",
        {
          key: {
            text: "Was it because this course is full?"
          },
          value: {
            html: application.rejectedReasons['course-full']
          }
        }, {
          key: {
            text: "Was it due to missing qualifications?"
          },
          value: {
            html: application.rejectedReasons['missing-qualifications']
          }
        }, {
          key: {
            text: "What qualifications was the candidate missing?"
          },
          value: {
            html: missingQualificationsReasonsHtml
          }
        } if application.rejectedReasons['missing-qualifications'] == "Yes",
        {
          key: {
            text: "Was it due to the quality of their application?"
          },
          value: {
            html: application.rejectedReasons['application-quality']
          }
        }, {
          key: {
            text: "Which parts of the application need improvement?"
          },
          value: {
            html: applicationQualityReasonsHtml
          }
        } if application.rejectedReasons['application-quality'] == "Yes",
        {
          key: {
            text: "Was it related to safeguarding?"
          },
          value: {
            html: application.rejectedReasons['safeguarding']
          }
        }, {
          key: {
            text: "Which safeguarding issues in particular?"
          },
          value: {
            html: safeguardingReasonsHtml
          }
        } if application.rejectedReasons['application-quality'] == "Yes",
        {
          key: {
            text: "Was it related to an issue we haven’t covered here?"
          },
          value: {
            html: anotherIssueHtml
          }
        },
        {
          key: {
            text: "Is there any other advice or feedback you’d like to give " + name + "?"
          },
          value: {
            html: otherFeedbackHtml
          }
        },
        {
          key: {
            text: "Would you be interested in future applications from " + name + "?"
          },
          value: {
            html: futureApplicationsHtml
          }
        }
        ]
      }) }}
      {% endif %}


      {# {% set rbd = application.submittedDate | addDays(40) %}
      {% set remaining = rbd | daysFromNow(rbd) %} #}

      {# {% if application.status == 'New' %}
        <p>Respond to applicant by {{rbd | date("dd LLL yyyy")}}</p>
        {{govukButton({
          text: "Respond to application",
          href: "/application/" + application.id + "/decision"
        })}}
      {% endif %} #}


      <h2 class="govuk-heading-l">Notes</h2>

      <p><a href="#">Add new note</a></p>

      {% if application.notes %}
        <div class="app-notes">
          {% for note in application.notes.items %}
            <div class="app-notes__note">
              <h3 class="govuk-heading-s govuk-!-margin-bottom-0">{{note.subject}}</h3>
              <p class="govuk-!-margin-bottom-1">{{note.body | nl2br or "No information shared"}}</p>
              <span class="govuk-caption-m govuk-!-font-size-16">{{note.sender}}, {{note.date | date("d LLL yyyy")}}</span>
            </div>
          {% endfor %}
        </div>
      {% endif %}

      <h2 class="govuk-heading-l govuk-!-margin-top-6">Application</h2>

      {% include "_includes/application/details.njk" %}

      <h2 class="govuk-heading-m">Course details</h2>
      {{ govukSummaryList({
        rows: [{
          key: {
            text: "Provider"
          },
          value: {
            text: application["provider"]
          }
        }, {
          key: {
            text: "Course"
          },
          value: {
            text: application["course"]
          }
        }, {
          key: {
            text: "Cycle"
          },
          value: {
            text: '2020'
          }
        }, {
          key: {
            text: "Preferred location"
          },
          value: {
            text: 'Alliance Academy, Edgeware, Road Name, SW1 1AA'
          }
        }, {
          key: {
            text: "Study mode"
          },
          value: {
            text: 'Full time'
          }
        }]
      }) }}




      <h2 class="govuk-heading-m govuk-!-margin-top-8">Disability, access and other needs</h2>
      {# <p class="govuk-body">(Question to candidate: “Your knowledge about the subject you want to teach”)</p> #}
      <p class="govuk-body">{{application["reasonable-adjustments"] | nl2br or "No information shared"}}</p>

      <h2 class="govuk-heading-m govuk-!-margin-top-8">Criminal convictions and professional misconduct</h2>
      {# <p class="govuk-body">(Question to candidate: “Your knowledge about the subject you want to teach”)</p> #}

      {% if application.safeguarding == 'Request' %}
        <p class="govuk-body">The candidate has shared information related to safeguarding. Please contact them directly for more details.</p>
      {% else %}
        <p class="govuk-body">{{application.safeguarding | nl2br or "No information shared"}}</p>
      {% endif %}

      <h2 class="govuk-heading-m govuk-!-margin-top-8">Interview</h2>
      <p class="govuk-body">{{application["personal-statement"].interview | nl2br or "No information shared"}}</p>

      <h2 class="govuk-heading-m govuk-!-margin-top-8">Qualifications</h2>
      {% include "_includes/application/degrees.njk" %}
      {% include "_includes/application/gcses.njk" %}
      {% include "_includes/application/other-qualifications.njk" %}

      <h2 class="govuk-heading-l govuk-!-margin-top-8">Work history</h2>
      {% include "_includes/application/work-history.njk" %}

      <h2 class="govuk-heading-l govuk-!-margin-top-8">Unpaid experience and volunteering</h2>
      {% include "_includes/application/school-experience.njk" %}

      <h2 class="govuk-heading-m govuk-!-margin-top-8">Language skills</h2>
      {% include "_includes/application/language-skills.njk" %}

      <h2 class="govuk-heading-m govuk-!-margin-top-8">Personal statement</h2>
      <h3 class="govuk-heading-s govuk-!-margin-bottom-0">Vocation</h3>
      <p class="govuk-hint">Question to candidate: “Why do you want to be a teacher?”</p>
      <p>{{application["personal-statement"].vocation | safe | nl2br or "—"}}</p>

      <h3 class="govuk-heading-s govuk-!-margin-bottom-0">Subject knowledge</h3>
      <p class="govuk-hint">Question to candidate: “Your knowledge about the subject you want to teach”</p>
      <p>{{application["personal-statement"]["subject-knowledge"] | safe | nl2br or "—" }}</p>

      <h2 class="govuk-heading-m govuk-!-margin-top-8 govuk-!-margin-bottom-2">First referee</h2>
      {% set referenceId = "first" %}
      {% include "_includes/application/reference.njk" %}

      <h2 class="govuk-heading-m govuk-!-margin-top-8 govuk-!-margin-bottom-2">Second referee</h2>
      {% set referenceId = "second" %}
      {% include "_includes/application/reference.njk" %}
    </div>
    <div class="govuk-grid-column-one-third">
      <h2 class="govuk-heading-l">Recent events</h2>
      {{ appTimeline({items: timeline})}}
      <p class="govuk-body"><a href="">View all events</a>
    </div>
  </div>
{% endblock %}
