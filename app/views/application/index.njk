  <h2 class="govuk-heading-m">Candidate details</p>
  {{ govukSummaryList({
    rows: [{
      key: {
        text: "Full name"
      },
      value: {
        text: application.name
      }
    }, {
      key: {
        text: "Date of birth"
      },
      value: {
        text: application["date-of-birth"] | date("d LLLL yyyy")
      }
    }, {
      key: {
        text: "Nationality"
      },
      value: {
        text: application.nationality
      }
    }, {
      key: {
        text: "Phone"
      },
      value: {
        text: "01234 567890"
      }
    }, {
      key: {
        text: "Address"
      },
      value: {
        text: "5 Royal Exchange Square\nGlasgow\nG1 3AH\nUnited Kingdom" | nl2br | safe
      }
    }, {
      key: {
        text: "Personal statement"
      },
      value: {
        html: personalStatementHtml
      }
    }]
  }) }}
{% endblock %}

{% block secondary %}
  <div class="app-card">
    <h2 class="govuk-heading-m">Status</h2>
    {{ govukTag({
      classes: "app-tag--" + application.status + " govuk-!-margin-bottom-4",
      text: application.status | capitalize
    }) }}
    <p class="govuk-body">Application submitted on {{ application.submitted | date("dd LLL yyyy") }}</p>

    {{ govukButton({
      classes: "govuk-!-margin-bottom-2",
      text: "Change status",
      href: "/application/" + application.id + "/change-status"
    }) }}
  </div>
{% endblock %}
