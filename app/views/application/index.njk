{% extends "_content-wide.njk" %}

{% set primaryNavId = 'applications' %}
{% set application = data.applications[applicationId] %}
{% set status = application.status %}
{% set name = [application["personal-details"]["given-name"], application["personal-details"]["family-name"]] | join(" ") %}
{% set title = name %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Applications",
      href: "/"
    }, {
      text: title
    }]
  }) if not data.bare }}
{% endblock %}

{% block beforePageTitle %}
  {{ appBanner({
    html: "<h2 class=\"govuk-heading-m\">Application status changed to ‘" + status | status("title") + "’</h2>",
    type: "success",
    icon: false
  }) if success }}

  {{ appBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flash+"</h2>",
    type: "success",
    icon: false
  }) if flash }}

{% endblock %}

{% block primary %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% include "_includes/application/details.njk" %}
    </div>
    <div class="govuk-grid-column-one-third">
      <div class="app-card">
        <h2 class="govuk-heading-m">Status</h2>
        {% if status.declined or status.accepted %}
          <a href="/email/{{ applicationId }}/candidate-{{ status | status }}-offer">
        {% endif %}
          {{ govukTag({
            classes: "app-tag--" + status | status + " govuk-!-margin-bottom-4",
            text: status | status("title") | capitalize
          }) }}
        {% if status.declined or status.accepted %}
          </a>
        {% endif %}
        <dl class="app-definition-list">
          <dt>Application submitted<dt>
          <dd>{{ status.submitted.date | date("dd LLL yyyy") }}</dd>
        {% if status.rejected %}
          <dt>Application rejected<dt>
          <dd>{{ status.rejected.date | date("dd LLL yyyy") }}</dd>
        {% elif application.statusA == 'enrolled' %}
          <dt>Enrolled on<dt>
          <dd>{{ status.enrolled.date | date("dd LLL yyyy") }}</dd>
        {% elif status['conditions-met'] %}
          <dt>Conditions met on<dt>
          <dd>{{ status['conditions-met'].date | date("dd LLL yyyy") }}</dd>
        {% elif status['conditions-not-met'] %}
          <dt>Conditions not met on<dt>
          <dd>{{ status['conditions-not-met'].date | date("dd LLL yyyy") }}</dd>
        {% elif status['withdrawn-by-us'] %}
          <dt>Withdrawn on<dt>
          <dd>{{ status['withdrawn-by-us'].date | date("dd LLL yyyy") }}</dd>
        {% elif status['withdrawn-by-candidate'] %}
          <dt>Withdrawn on<dt>
          <dd>{{ status['withdrawn-by-candidate'].date | date("dd LLL yyyy") }}</dd>
        {% elif status.declined %}
          <dt>Offer declined<dt>
          <dd>{{ status.declined.date | date("dd LLL yyyy") }}</dd>
        {% elif status.accepted %}
          <dt>Offer accepted<dt>
          <dd>{{ status.accepted.date | date("dd LLL yyyy") }}</dd>
        {% elif status.offered %}
          <dt>Offer made<dt>
          <dd>{{ status.offered.date | date("dd LLL yyyy") }}</dd>
        {% else %}
          {% set rbd = status.submitted.date | addDays(40) %}
          {% set remaining = rbd | daysFromNow(rbd) %}
          <dt>Respond to the applicant by<dt>
          <dd>{{ rbd | date("dd LLL yyyy") }}</dd>
        {% endif %}
        </dl>

        {% if application.statusA == 'new' %}
          {{govukButton({
            classes: "govuk-!-margin-bottom-4",
            text: "Respond to application",
            href: "/application/" + application.id + "/decision"
          })}}
        {% elseif application.statusA == 'offered' %}
          {{govukButton({
            classes: "govuk-!-margin-bottom-4",
            text: "Change response",
            href: "/application/" + application.id + "/edit-response"
          })}}
        {% elseif application.statusA == 'accepted' %}
          {{govukButton({
            classes: "govuk-!-margin-bottom-4",
            text: "Confirm conditions",
            href: "/application/" + application.id + "/mark-conditions"
          })}}
        {% elseif application.statusA == 'withdrawn-by-us' %}
          {# {{govukButton({
            classes: "govuk-!-margin-bottom-4",
            text: "Edit response",
            href: "/application/" + application.id + "/edit-response"
          })}} #}
        {% elseif application.statusA == 'conditions-not-met' %}

        {% elseif application.statusA == 'conditions-met' %}
          {{govukButton({
            classes: "govuk-!-margin-bottom-4",
            text: "Enroll candidate",
            href: "/application/" + application.id + "/confirm-enrollment"
          })}}
          <p><a href="#">Cancel offer</a></p>
        {% elseif application.statusA == 'enrolled' %}

        {% endif %}

        {# {% if not data.bare %}
        <p class="govuk-body govuk-!-margin-bottom-0"><a href="#" download>Download application (CSV)</a></p>
        {% endif %} #}
      </div>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h2 class="govuk-heading-l">Course details</h2>
      {{ govukSummaryList({
        rows: [{
          key: {
            text: "Provider"
          },
          value: {
            text: application["provider"]
          }
        }, {
          key: {
            text: "Course"
          },
          value: {
            text: application["course"]
          }
        }, {
          key: {
            text: "Cycle"
          },
          value: {
            text: '2020'
          }
        }, {
          key: {
            text: "Preferred location"
          },
          value: {
            text: 'Alliance Academy, Edgeware, Road Name, SW1 1AA'
          }
        }, {
          key: {
            text: "Study mode"
          },
          value: {
            text: 'Full time'
          }
        }]
      }) }}

      {% if conditions.length %}
         <h2 class="govuk-heading-l govuk-!-margin-top-8">Offer conditions</h2>

        {{appTaskList({
          items: conditions
        })}}
      {% endif %}

      <h2 class="govuk-heading-l govuk-!-margin-top-8">Accessibility needs</h2>
      {# <p class="govuk-body">(Question to candidate: “Your knowledge about the subject you want to teach”)</p> #}
      <p class="govuk-body">{{application["reasonable-adjustments"] | nl2br or "—"}}</p>

      <h2 class="govuk-heading-l govuk-!-margin-top-8">Interview needs</h2>
      {# <p class="govuk-body">(Question to candidate: “Your knowledge about the subject you want to teach”)</p> #}
      <p class="govuk-body">{{application["personal-statement"].interview | nl2br or "—"}}</p>

      <h2 class="govuk-heading-l govuk-!-margin-top-8">Qualifications</h2>
      {% include "_includes/application/degrees.njk" %}
      {% include "_includes/application/gcses.njk" %}
      {% include "_includes/application/other-qualifications.njk" %}

      <h2 class="govuk-heading-l govuk-!-margin-top-8">Work history</h2>
      {% include "_includes/application/work-history.njk" %}

      <h2 class="govuk-heading-l govuk-!-margin-top-8">School experience and volunteering</h2>
      {% include "_includes/application/school-experience.njk" %}

      <h2 class="govuk-heading-l govuk-!-margin-top-8">Language Skills</h2>
      {% include "_includes/application/language-skills.njk" %}

      <h2 class="govuk-heading-l govuk-!-margin-top-8">Personal statement</h2>
      {% include "_includes/application/personal-statement.njk" %}


      <h2 class="govuk-heading-l govuk-!-margin-top-8">Safeguarding</h2>
      {# <p class="govuk-body">We ask the candidate if they want to disclose anything before their DBS check.</p> #}
      <p class="govuk-body">{{application["suitability"] | nl2br or "Nothing disclosed"}}</p>

      <h2 class="govuk-heading-l govuk-!-margin-top-8 govuk-!-margin-bottom-2">First referee</h2>
      {% set referenceId = "first" %}
      {% include "_includes/application/reference.njk" %}

      <h2 class="govuk-heading-l govuk-!-margin-top-8 govuk-!-margin-bottom-2">Second referee</h2>
      {% set referenceId = "second" %}
      {% include "_includes/application/reference.njk" %}

    </div>
  </div>
{% endblock %}
