{% extends "_content.njk" %}

{% set application = applications[applicationId] %}
{% set parent = "Application for " + application.course %}
{% set title = application.name %}
{% set hasSecondary = true %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Applications",
      href: "/"
    }, {
      text: title
    }]
  }) }}
{% endblock %}

