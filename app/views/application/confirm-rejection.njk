{% extends "_layout.njk" %}

{% set primaryNavId = 'applications' %}
{% set application = data.applications[applicationId] %}
{% set name = [application["personal-details"]["given-name"], application["personal-details"]["family-name"]] | join(" ") %}
{% set title = "Check and confirm rejection" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + application.id + "/reject"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{title}}</h1>

      {{ govukSummaryList({
        rows: [{
            key: {
              text: "Candidate name"
            },
            value: {
              text: name
            }
          }, {
            key: {
              text: "Course"
            },
            value: {
              html: application.course
            }
          }, {
            key: {
              text: "Preferred location"
            },
            value: {
              html: "Alliance Academy, Edgeware, Road Name, SW1 1AA"
            }
          },
          {
            key: {
              text: "Provider"
            },
            value: {
              html: application.provider
            }
          }, {
          key: {
            text: "Reason for rejection"
          },
          value: {
            text: reasons | safe
          }
        } if reasons]
      }) }}


      <form method="post">
        {{ govukButton({
          text: "Reject application"
        }) }}
      </form>
      <p class="govuk-body"><a href="/application/{{ application.id }}">Cancel</a></p>
    </div>
  </div>
{% endblock %}
