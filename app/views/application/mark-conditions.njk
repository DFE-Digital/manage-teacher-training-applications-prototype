{% extends "_layout.njk" %}

{% set application = applications[applicationId] %}
{% set name = [application["personal-details"]["given-name"], application["personal-details"]["family-name"]] | join(" ") %}
{# {% set parent = "Application for " + application.course %} #}
{% set title = "Confirm if the candidate has met all conditions" %}

{% block pageNavigation %}
  {{ govukBreadcrumbs({
    items: [{
      text: "Applications",
      href: "/"
    }, {
      text: name,
      href: "/application/" + application.id
    }, {
      text: title
    }]
  }) if not data.bare }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{title}}</h1>
      {% include "_includes/application-summary.njk" %}

      <h2 class="govuk-heading-l">Conditions</h2>
      <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-8">
        {% for condition in conditions %}
          <li>{{condition.description}}</li>
        {% endfor %}
      </ul>
    </div>
  </div>


  <form action="{{ formaction | default('') }}" method="post">
    {{ govukRadios({
      fieldset: {
        legend: {
          html: "Has the candidate met all of the conditions?",
          classes: "govuk-fieldset__legend--m"
        }
      },
      idPrefix: "status",
      name: "conditionsmet",
      items: [{
        value: "yes",
        text: "Yes, they've met all of the conditions",
        checked: checked("conditionsmet", "yes")
      }, {
        value: "no",
        text: "No",
        checked: checked("conditionsmet", "no")
      }]
    }) }}

    {{ govukButton({
      text: "Continue"
    }) }}
  </form>

  <p class="govuk-body"><a href="/application/{{ application.id }}">Cancel</a></p>
{% endblock %}
