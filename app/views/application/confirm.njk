{% extends "_form-wide.njk" %}

{% set application = data.applications[applicationId] %}
{% set name = [application["personal-details"]["given-name"], application["personal-details"]["family-name"]] | join(" ") %}
{% set status = application.status %}
{% set conditions = status.offer.conditions %}
{% set standardConditions = status.offer["standard-conditions"] %}
{% set recommendations = status.offer.recommendations %}
{% set reasons = status.rejected.reasons %}
{% set parent = "Application for " + application.course %}
{% if type == "offer" %}
  {% set title = "Confirm offer" %}
  {% set lastpage = "/offer" %}
{% else %}
  {% set title = "Confirm rejection" %}
  {% set lastpage = "/reject" %}
{% endif %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/application/" + application.id + lastpage
  }) }}
{% endblock %}

{% block primary %}
  {% set conditionsHtml %}
    {% if conditions %}
    <ul class="govuk-list govuk-list--bullet">
      {% for condition in conditions %}
      <li>{{ condition }}</li>
      {% endfor %}
    </ul>
    {% endif %}
  {% endset %}

  {% set standardConditionsHtml %}
    {% if standardConditions %}
    <ul class="govuk-list govuk-list--bullet">
      {% for condition in standardConditions %}
      <li>{{ condition }}</li>
      {% endfor %}
    </ul>
    {% endif %}
  {% endset %}

  {% set reasonsHtml %}
    {% if reasons %}
    <ul class="govuk-list govuk-list--bullet">
      {% for reason in reasons %}
      <li>{{ reason }}</li>
      {% endfor %}
    </ul>
    {% endif %}
  {% endset %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if type == "offer" %}
        {{ govukSummaryList({
          rows: [{
            key: {
              text: "Standard conditions"
            },
            value: {
              text: standardConditionsHtml | safe
            }
          }, {
            key: {
              text: "Further conditions"
            },
            value: {
              text: conditionsHtml | safe or "None provided"
            }
          } if conditions | length > 0, {
            key: {
              text: "Recommendations"
            },
            value: {
              text: recommendations
            }
          } if recommendations]
        }) if standardConditions or conditions or recommendations }}
        <p class="govuk-body">When you confirm this offer, you guarantee this candidate a place on their chosen course, if they meet the conditions you have set out.</p>
        <p class="govuk-body">You can only change the conditions of this offer with the candidate’s permission.</p>
      {% elif type == "reject" %}
        {{ govukSummaryList({
          rows: [{
            key: {
              text: "Reasons for rejection"
            },
            value: {
              text: reasonsHtml | safe or "None provided"
            }
          } if reasons, {
            key: {
              text: "Other comments" if reasons else "Reasons for rejection"
            },
            value: {
              text: status.rejected.comments or "None provided"
            }
          }]
        }) }}
        <p class="govuk-body">Are you sure you want to reject this application? You can’t undo this action once confirmed.</p>
      {% endif %}

      {{ govukButton({
        text: title
      }) }}
      <p class="govuk-body"><a href="/application/{{ application.id }}">Cancel</a></p>
    </div>
  </div>
{% endblock %}
