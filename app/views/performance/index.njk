      }
    }) }}
  </div>
  <div class="govuk-grid-column-one-quarter">
    {{ appGlanceMetric({
      heading: {
        text: "Metric 3"
      }
    }) }}
  </div>
  <div class="govuk-grid-column-one-quarter">
    {{ appGlanceMetric({
      heading: {
        text: "Metric 4"
      }
    }) }}
  </div>
</div>

<h2 class="govuk-heading-m">Something else</h2>

