{% extends "_layout.njk" %}

{% set org = data.organisations[0].name %}

{% block beforeContent %}
  {{ govukBackLink({
    href: "/onboard/step1-part2"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-xl">Set up permissions</span>
      <h1 class="govuk-heading-xl">For courses run and ratified by {{org}}</h1>

      {% include "_includes/permissions-guidance.njk" %}

      <form novalidate action="/onboard/step3">
        {% include "_includes/permissions-checkboxes.njk" %}
        {{govukButton({
          text: "Continue"
        })}}
      </form>
    </div>
  </div>

{% endblock %}
