{% extends "_layout.njk" %}

{% set title = "Organisation permissions set up" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: title
      }) }}

      <p>You can change organisation permissions in <a href="/organisation-settings">organisation settings</a>.</p>

      <h2 class="govuk-heading-m">
        Next steps
      </h2>

      <p class="govuk-body">
        You can now:
      <p>
      <ul class="govuk-list govuk-list--bullet">
        <li>
          <a href="/">view applications</a>
        </li>
        {% if canManageUsers %}
          <li>
            {% if data.user.organisations.length > 1 %}
              <a href="/organisation-settings">invite or manage users</a>
            {% else %}
              <a href="/organisation-settings/{{data.user.organisation.id}}/users">invite or manage users</a>
            {% endif %}
          </li>
        {% endif %}
        <li>
          <a href="/account/notifications">manage your email notifications</a>
        </li>
      </ul>

    </div>
  </div>
{% endblock %}
