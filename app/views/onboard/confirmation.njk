{% extends "_layout.njk" %}

{% set title = "Organisational permissions set up" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: "Organisational permissions set up"
      }) }}

      <p>You can change organisational permissions in <a href="/organisation-settings">organisation settings</a>.</p>

      <h2 class="govuk-heading-m">
        Next steps
      </h2>

      <p class="govuk-body">
        You can now:
      <p>
      <ul class="govuk-list govuk-list--bullet">
        <li>
          <a href="/">view applications</a>
        </li>
        {% if canManageUsers %}
          <li>
            <a href="/account/users">invite or manage users</a>
          </li>
        {% endif %}
        <li>
          <a href="/account/notifications">manage your email notifications</a>
        </li>
      </ul>

    </div>
  </div>
{% endblock %}
