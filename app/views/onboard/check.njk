{% extends "_layout.njk" %}

{% set title %}
  Check and save organisational permissions
{% endset %}

{% block beforeContent %}
  {{ govukBackLink({
    href: "/onboard/relationship1"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

      <span class="govuk-caption-l">Set up organisational permissions</span>
      <h1 class="govuk-heading-l">{{ title }}</h1>

      <form novalidate action="/onboard/confirmation">

        {# <h2 class="govuk-heading-m">
          {{ data.user.organisations[0].name }}
        </h2> #}

        {# {% set viewApplicationsHtml %}
          <ul class="govuk-list">
          <li>{{ data.user.organisations[0].name }}</li>
          <li>{{ data.accreditedBodies[0].name }} (can only see courses they ratify)</li>
        </ul>

          {{ govukDetails({
            summaryText: "Why can’t this be changed?",
            text: "All users at both organisations can view applications – you do not need to set permissions for this."
          }) }}

        {% endset %} #}
        {% set makeDecisionsHtml %}
          <ul class="govuk-list">
            <li>{{ data.user.organisations[0].name }}</li>
          </ul>
        {% endset %}
        {% set viewSafeguardingHtml %}
          <ul class="govuk-list">
          <li>{{ data.user.organisations[0].name }}</li>
          <li>{{ data.accreditedBodies[0].name }}</li>
        </ul>
        {% endset %}
        {% set viewDiversityHtml %}
          <ul class="govuk-list">
          <li>{{ data.user.organisations[0].name }}</li>
          <li>{{ data.accreditedBodies[0].name }}</li>
        </ul>
        {% endset %}

        {% set cardHtml %}

         {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "Make decisions and set up interviews"
            },
            value: {
              html: makeDecisionsHtml
            },
            actions: {
              items: [{
                href: "/onboard/relationship1",
                text: "Change"
              }]
            }
          },
          {
            key: {
              text: "View criminal convictions and professional misconduct"
            },
            value: {
              html: viewSafeguardingHtml
            },
            actions: {
              items: [{
                href: "/onboard/relationship1",
                text: "Change"
              }]
            }
          },
          {
            key: {
              text: "View equality and diversity information"
            },
            value: {
              html: viewDiversityHtml
            },
            actions: {
              items: [{
                href: "/onboard/relationship1",
                text: "Change"
              }]
            }
          }
        ]
      }) }}
          {% endset %}

          {% set title %}
            {{ data.user.organisations[0].name }} and {{ data.accreditedBodies[0].name }}
          {% endset %}
          {{appSummaryCard({
            titleText: title,
            classes: "govuk-!-margin-bottom-6",
            html: cardHtml
          })}}


        {{govukButton({
          text: "Save organisational permissions"
        })}}
      </form>
    </div>
  </div>

{% endblock %}
