{% extends "_content-wide.njk" %}

{% set title = "Set organisational permissions" %}

{% block primary %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <p>Choose which organisations can:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>make decisions about applications</li>
        <li>access sensitive candidate information</li>
      </ul>

      <p>Youâ€™ll need to do this for:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>your own organisations</li>
        <li>any accredited bodies you work with</li>
      </ul>

      <p>You can set permissions for individual users separately, in the Users section.</p>

      <table class="govuk-table">
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header">Your organisations</th>
            <th scope="col" class="govuk-table__header">Accredited bodies</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
         {% for item in items %}
          {% if not item.org.isAccreditedBody %}
            <tr class="govuk-table__row">
              <th scope="row" class="govuk-table__cell">{{ item.org.name }}</th>
              <td class="govuk-table__cell"><ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-0">
                  {% for p in item.partners %}
                    <li>{{ p.name }}</li>
                  {% endfor %}
                </ul>
              </td>
            </tr>
          {% endif %}
        {% endfor %}
      </tbody>
      </table>

      <form novalidate action="/onboard/relationship1">
        {{govukButton({
          text: "Continue"
        })}}
      </form>
    </div>
  </div>

{% endblock %}
