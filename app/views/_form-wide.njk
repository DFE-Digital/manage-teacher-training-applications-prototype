{% extends "_layout.njk" %}

{% block content %}
  <form{% if formaction %} action="{{ formaction }}"{% endif %} method="post">
  {% set legendHtml %}
    {% if parent %}
      <span class="govuk-caption-xl">{{ parent }}</span> {{ title }}
    {% else %}
      {{ title | safe }}
    {% endif %}
  {% endset %}
  {% call govukFieldset({
    legend: {
      html: legendHtml,
      classes: "govuk-fieldset__legend--xl",
      isPageHeading: true
    }
  }) %}
    {% block primary %}
    {% endblock %}
  {% endcall %}
  </form>
{% endblock %}
