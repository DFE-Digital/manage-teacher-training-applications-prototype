{% extends "_layout.njk" %}

{% set sectionTitle = "How to use this service" %}
{% set title = title %}

{% block beforeContent %}
{{ govukBreadcrumbs({
  items: [
    {
      text: sectionTitle,
      href: "/how-to-use-this-service"
    }, {
      text: title
    }
  ]
}) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">{{ sectionTitle }}</span>
        {{ title }}
      </h1>

      <div class="app-markdown">
        {{ content | markdownToHtml | safe }}
      </div>

    </div>
  </div>
{% endblock %}
